@model Inventory.Application.DTOs.Product.CreateBatchRequest
@{
    ViewData["Title"] = "Add Batch";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="neo-card p-0 overflow-hidden">
                <div class="p-4 bg-black text-white d-flex justify-content-between align-items-center">
                    <div>
                        <h5 class="mb-0 fw-light text-uppercase text-white-50">@ViewBag.ProductSku</h5>
                        <h3 class="mb-0 fw-black text-uppercase">New Batch Entry</h3>
                    </div>
                </div>
                <div class="p-5" style="background: white;">
                    <form asp-action="AddBatch" asp-route-id="@Model.ProductId" method="post">
                        @Html.AntiForgeryToken()
                        <input type="hidden" asp-for="ProductId" />

                        <div class="alert alert-info border-0 d-flex align-items-center mb-4">
                            <i class="bi bi-info-circle-fill me-2 fs-4"></i>
                            <div>
                                <strong>Adding Batch for:</strong> @ViewBag.ProductName
                            </div>
                        </div>
                        
                        <div class="row g-4">
                            <div class="col-12">
                                <label asp-for="BatchNumber" class="form-label fw-black text-uppercase small">Batch Identification (Number/Code)</label>
                                <input asp-for="BatchNumber" class="form-control fw-black form-control-lg" required placeholder="LOT-XXX-YYY" />
                                <span asp-validation-for="BatchNumber" class="text-danger small fw-bold"></span>
                            </div>

                            <div class="col-md-4">
                                <label asp-for="InitialQuantity" class="form-label fw-black text-uppercase small">Initial Quantity</label>
                                <input asp-for="InitialQuantity" class="form-control fw-bold" type="number" step="0.01" min="0" />
                                <span asp-validation-for="InitialQuantity" class="text-danger small fw-bold"></span>
                            </div>
                            
                            <div class="col-md-4">
                                <label asp-for="UnitCost" class="form-label fw-black text-uppercase small">Unit Cost</label>
                                <input asp-for="UnitCost" class="form-control fw-bold" type="number" step="0.01" min="0" />
                                <span asp-validation-for="UnitCost" class="text-danger small fw-bold"></span>
                            </div>

                            <div class="col-md-4">
                                <label asp-for="UnitPrice" class="form-label fw-black text-uppercase small">Unit Price</label>
                                <input asp-for="UnitPrice" class="form-control fw-bold" type="number" step="0.01" min="0" />
                                <span asp-validation-for="UnitPrice" class="text-danger small fw-bold"></span>
                            </div>

                            <div class="col-12">
                                <label asp-for="Notes" class="form-label fw-black text-uppercase small">Additional Notes</label>
                                <textarea asp-for="Notes" class="form-control" rows="3" placeholder="Optional batch details..."></textarea>
                                <span asp-validation-for="Notes" class="text-danger small fw-bold"></span>
                            </div>
                            
                            <div class="col-12 mt-5 pt-4 border-top border-2">
                                <div class="d-flex gap-3">
                                    <button type="submit" class="neo-btn neo-btn-primary px-5">INITIALIZE BATCH</button>
                                    <a asp-action="Details" asp-route-id="@Model.ProductId" class="neo-btn">CANCEL</a>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
