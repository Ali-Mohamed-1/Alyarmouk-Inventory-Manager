@model Inventory.Application.DTOs.Product.UpdateProductRequest
@{
    ViewData["Title"] = "Edit Product";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-10 col-lg-8">
            <div class="neo-card p-0 overflow-hidden">
                <div class="p-4 bg-black text-white d-flex justify-content-between align-items-center">
                    <h3 class="mb-0 fw-black text-uppercase">Modify Product: <span class="text-primary">@Model.Name</span></h3>
                    <a asp-controller="Dashboard" asp-action="Index" class="neo-btn neo-btn-danger btn-sm text-uppercase">BACK TO DASHBOARD</a>
                </div>
                <div class="p-5" style="background: white;">
                    <form asp-action="Edit" asp-route-id="@Model.Id" method="post">
                        @Html.AntiForgeryToken()
                        <input type="hidden" asp-for="Id" />
                        <input type="hidden" asp-for="RowVersion" />
                        
                        <div class="row g-4">
                            <div class="col-md-6">
                                <label asp-for="Sku" class="form-label fw-black text-uppercase small">Stock Keeping Unit (SKU)</label>
                                <input asp-for="Sku" class="form-control fw-black" required />
                                <span asp-validation-for="Sku" class="text-danger small fw-bold"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="Name" class="form-label fw-black text-uppercase small">Identification Name</label>
                                <input asp-for="Name" class="form-control fw-black" required />
                                <span asp-validation-for="Name" class="text-danger small fw-bold"></span>
                            </div>

                            <div class="col-md-6">
                                <label asp-for="Unit" class="form-label fw-black text-uppercase small">Measurement Unit</label>
                                <input asp-for="Unit" class="form-control fw-bold" required placeholder="e.g. KG, PCS, BOX" />
                                <span asp-validation-for="Unit" class="text-danger small fw-bold"></span>
                            </div>

                            <div class="col-md-6">
                                <label asp-for="ReorderPoint" class="form-label fw-black text-uppercase small">Low stock Level Trigger</label>
                                <input asp-for="ReorderPoint" class="form-control fw-bold" type="number" step="0.01" required />
                                <span asp-validation-for="ReorderPoint" class="text-danger small fw-bold"></span>
                            </div>
                            <div class="col-md-6 d-flex align-items-end">
                                <div class="form-check mb-2">
                                    <input class="form-check-input" type="checkbox" asp-for="IsActive">
                                    <label class="form-check-label" asp-for="IsActive">Product is Globally Active</label>
                                </div>
                            </div>
                            
                            <div class="col-12 mt-5 pt-4 border-top border-2">
                                <div class="d-flex gap-3">
                                    <button type="submit" class="neo-btn neo-btn-primary px-5">UPDATE PERMANENT RECORD</button>
                                    <a asp-controller="Dashboard" asp-action="Index" class="neo-btn">CANCEL</a>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
