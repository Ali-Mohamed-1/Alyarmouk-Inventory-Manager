@model Inventory.Application.DTOs.Product.UpdateProductRequest
@{
    ViewData["Title"] = "Edit Product";
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0 fw-bold">Edit Product: @Model.Name</h5>
                </div>
                <div class="card-body p-4">
                    <form asp-action="Edit" asp-route-id="@Model.Id" method="post">
                        @Html.AntiForgeryToken()
                        <input type="hidden" asp-for="Id" />
                        <input type="hidden" asp-for="RowVersion" />
                        
                        <div class="row g-3">
                            <div class="col-md-6">
                                <label asp-for="Sku" class="form-label fw-bold">SKU</label>
                                <input asp-for="Sku" class="form-control" required />
                                <span asp-validation-for="Sku" class="text-danger"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="Name" class="form-label fw-bold">Product Name</label>
                                <input asp-for="Name" class="form-control" required />
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="CategoryId" class="form-label fw-bold">Category</label>
                                <select asp-for="CategoryId" class="form-select" asp-items="@(new SelectList(ViewBag.Categories, "Id", "Name"))" required>
                                    <option value="">-- Select Category --</option>
                                </select>
                                <span asp-validation-for="CategoryId" class="text-danger"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="Unit" class="form-label fw-bold">Unit</label>
                                <input asp-for="Unit" class="form-control" required />
                                <span asp-validation-for="Unit" class="text-danger"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="Price" class="form-label fw-bold">Price</label>
                                <input asp-for="Price" class="form-control" type="number" step="0.01" required />
                                <span asp-validation-for="Price" class="text-danger"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="Cost" class="form-label fw-bold">Cost</label>
                                <input asp-for="Cost" class="form-control" type="number" step="0.01" required />
                                <span asp-validation-for="Cost" class="text-danger"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="ReorderPoint" class="form-label fw-bold">Reorder Point</label>
                                <input asp-for="ReorderPoint" class="form-control" type="number" step="0.01" required />
                                <span asp-validation-for="ReorderPoint" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 d-flex align-items-end">
                                <div class="form-check form-switch mb-2">
                                    <input class="form-check-input" type="checkbox" asp-for="IsActive">
                                    <label class="form-check-label fw-bold" asp-for="IsActive">Active</label>
                                </div>
                            </div>
                            <div class="col-12 mt-4">
                                <button type="submit" class="btn btn-primary px-4 fw-bold">Save Changes</button>
                                <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-outline-secondary px-4">Cancel</a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
