@model IEnumerable<Inventory.Application.DTOs.Product.ProductResponseDto>
@{
    ViewData["Title"] = "Products";
}

<div class="container-fluid py-3">
    <div class="d-flex justify-content-between align-items-center mb-5">
        <h1 class="display-4 fw-black text-uppercase mb-0" style="letter-spacing: -2px;">Master Inventory</h1>
        <a asp-action="Create" class="neo-btn neo-btn-primary">
            <i class="bi bi-plus-circle"></i> CREATE NEW PRODUCT
        </a>
    </div>

    <div class="neo-card p-0 overflow-hidden">
        <div class="p-4 bg-black text-white">
            <h5 class="mb-0 fw-black text-uppercase">Global Product Catalog</h5>
        </div>
        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0">
                <thead>
                    <tr>
                        <th class="ps-4">SKU</th>
                        <th>NAME</th>
                        <th>CATEGORY</th>
                        <th>UNIT</th>

                        <th>STATUS</th>
                        <th class="text-end pe-4">ACTIONS</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="ps-4"><code class="fw-black fs-6 text-black">@item.Sku</code></td>
                            <td class="fw-black text-uppercase">@item.Name</td>
                            <td><span class="text-uppercase small fw-bold">@item.CategoryName</span></td>
                            <td class="small fw-bold">@item.Unit</td>

                            <td>
                                @if (item.IsActive)
                                {
                                    <span class="badge neo-btn-success">ACTIVE</span>
                                }
                                else
                                {
                                    <span class="badge neo-btn-danger">INACTIVE</span>
                                }
                            </td>
                            <td class="text-end pe-4">
                                <div class="d-flex gap-2 justify-content-end">
                                    <a asp-action="AddBatch" asp-route-productId="@item.Id" class="neo-btn neo-btn-success btn-sm">ADD BATCH</a>
                                    <a asp-action="Details" asp-route-id="@item.Id" class="neo-btn neo-btn-info btn-sm">VIEW</a>
                                    <a asp-action="Edit" asp-route-id="@item.Id" class="neo-btn neo-btn-warning btn-sm">EDIT</a>
                                </div>
                            </td>
                        </tr>
                    }
                    @if (!Model.Any())
                    {
                        <tr>
                            <td colspan="6" class="text-center py-5 fw-bold">NO PRODUCTS REGISTERED IN SYSTEM.</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
