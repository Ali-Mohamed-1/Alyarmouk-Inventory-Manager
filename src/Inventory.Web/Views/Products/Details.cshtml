@model Inventory.Application.DTOs.Product.ProductResponseDto
@{
    ViewData["Title"] = "Product Details";
}

<div class="container py-4">
    <div class="row">
        <div class="col-md-12 mb-4">
            <div class="d-flex justify-content-between align-items-center">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb mb-0">
                        <li class="breadcrumb-item"><a asp-controller="Dashboard" asp-action="Index">Dashboard</a></li>
                        <li class="breadcrumb-item"><a asp-controller="Products" asp-action="Index">Products</a></li>
                        <li class="breadcrumb-item active">@Model.Name</li>
                    </ol>
                </nav>
                <div>
                    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary shadow-sm">
                        <i class="bi bi-pencil me-1"></i> Edit Product
                    </a>
                </div>
            </div>
        </div>

        <div class="col-lg-4 mb-4">
            <div class="card shadow-sm border-0 h-100">
                <div class="card-header bg-white border-bottom py-3">
                    <h5 class="mb-0 fw-bold text-primary">Core Information</h5>
                </div>
                <div class="card-body">
                    <div class="mb-4">
                        <label class="text-muted small text-uppercase fw-bold mb-1 d-block">Full Name</label>
                        <h4 class="fw-bold mb-0">@Model.Name</h4>
                    </div>
                    <div class="mb-4">
                        <label class="text-muted small text-uppercase fw-bold mb-1 d-block">SKU</label>
                        <code class="fs-5 text-primary">@Model.Sku</code>
                    </div>
                    <div class="row mb-4">
                        <div class="col-6">
                            <label class="text-muted small text-uppercase fw-bold mb-1 d-block">Category</label>
                            <span class="badge bg-light text-dark border p-2">@Model.CategoryName</span>
                        </div>
                        <div class="col-6">
                            <label class="text-muted small text-uppercase fw-bold mb-1 d-block">Status</label>
                            @if (Model.IsActive)
                            {
                                <span class="badge bg-success p-2 px-3">Active</span>
                            }
                            else
                            {
                                <span class="badge bg-danger p-2 px-3">Inactive</span>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-8">
            <div class="row g-4">
                <div class="col-md-6 col-lg-4">
                    <div class="card border-0 shadow-sm bg-light text-center p-3 h-100">
                        <div class="text-muted small text-uppercase fw-bold mb-2">Price</div>
                        <div class="h3 fw-bold mb-0">@Model.Price.ToString("C")</div>
                    </div>
                </div>
                <div class="col-md-6 col-lg-4">
                    <div class="card border-0 shadow-sm bg-light text-center p-3 h-100">
                        <div class="text-muted small text-uppercase fw-bold mb-2">Unit</div>
                        <div class="h3 fw-bold mb-0">@Model.Unit</div>
                    </div>
                </div>
                <div class="col-md-12 col-lg-4">
                    <div class="card border-0 shadow-sm bg-light text-center p-3 h-100">
                        <div class="text-muted small text-uppercase fw-bold mb-2">Reorder Point</div>
                        <div class="h3 fw-bold mb-0">@Model.ReorderPoint</div>
                    </div>
                </div>
            </div>

            <div class="card shadow-sm border-0 mt-4">
                <div class="card-header bg-white border-bottom py-3">
                    <h5 class="mb-0 fw-bold">Stock Timeline</h5>
                </div>
                <div class="card-body">
                    <p class="text-center text-muted py-4">Transaction history for this product will be displayed here.</p>
                </div>
            </div>
        </div>
    </div>
</div>
