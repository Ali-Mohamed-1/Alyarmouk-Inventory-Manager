@model Inventory.Application.DTOs.Product.ProductResponseDto
@{
    ViewData["Title"] = "Product Details";
}

<div class="container-fluid py-3">
    <div class="d-flex justify-content-between align-items-center mb-5">
        <div class="d-flex align-items-center gap-4">
            <h1 class="display-4 fw-black text-uppercase mb-0" style="letter-spacing: -2px;">Record Trace: @Model.Name</h1>
        </div>
        <div class="d-flex gap-2">
            <a asp-controller="Dashboard" asp-action="Index" class="neo-btn">BACK TO DASHBOARD</a>
            <a asp-action="AddBatch" asp-route-id="@Model.Id" class="neo-btn neo-btn-success">
                <i class="bi bi-plus-lg me-1"></i> ADD BATCH
            </a>
            <a asp-action="Edit" asp-route-id="@Model.Id" class="neo-btn neo-btn-primary">
                <i class="bi bi-pencil me-1"></i> MODIFY RECORD
            </a>
        </div>
    </div>

    <div class="row g-5">
        <div class="col-lg-4">
            <div class="neo-card h-100 p-0 overflow-hidden">
                <div class="p-4 bg-black text-white">
                    <h5 class="mb-0 fw-black text-uppercase">Identification Record</h5>
                </div>
                <div class="p-4" style="background: white;">
                    <div class="mb-5">
                        <label class="fw-black text-uppercase small text-muted d-block mb-1">Official Name</label>
                        <h2 class="fw-black text-uppercase mb-0">@Model.Name</h2>
                    </div>
                    <div class="mb-5">
                        <label class="fw-black text-uppercase small text-muted d-block mb-1">Stock ID (SKU)</label>
                        <code class="fs-4 fw-black text-black">@Model.Sku</code>
                    </div>
                    <div class="row g-4 mb-4">
                        <div class="col-12">
                            <label class="fw-black text-uppercase small text-muted d-block mb-1">Operational State</label>
                            @if (Model.IsActive)
                            {
                                <span class="badge neo-btn-success w-100 py-2">ACTIVE</span>
                            }
                            else
                            {
                                <span class="badge neo-btn-danger w-100 py-2">INACTIVE</span>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-8">
            <div class="row g-4 mb-5">

                <div class="col-md-4">
                    <div class="neo-card text-center p-4 h-100" style="background: var(--neo-aqua);">
                        <div class="fw-black text-uppercase small mb-2">Measurement</div>
                        <div class="display-6 fw-black">@Model.Unit.ToUpper()</div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="neo-card text-center p-4 h-100" style="background: var(--neo-yellow);">
                        <div class="fw-black text-uppercase small mb-2">Reorder Trigger</div>
                        <div class="display-6 fw-black">@Model.ReorderPoint</div>
                    </div>
                </div>
            </div>

            <div class="neo-card p-0 overflow-hidden">
                <div class="p-4 bg-black text-white">
                    <h5 class="mb-0 fw-black text-uppercase">Movement Audit Log</h5>
                </div>
                <div class="p-5 text-center" style="background: white;">
                    <div class="py-5">
                        <i class="bi bi-clock-history text-muted" style="font-size: 3rem; opacity: 0.3;"></i>
                        <p class="mt-4 fw-bold text-muted">HISTORICAL DATA TRACE IS CURRENTLY OFFLINE FOR THIS NODE.</p>
                        <p class="small text-muted mb-0">TRANSACTION SYNC WILL APPEAR AUTOMATICALLY ON NEXT REVISION.</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
