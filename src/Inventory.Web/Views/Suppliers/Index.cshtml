@{
    ViewData["Title"] = "Suppliers";
}

<style>
    .supplier-card {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        border-radius: 12px;
        padding: 1.5rem;
        transition: transform 0.2s, box-shadow 0.2s;
        margin-bottom: 1.5rem;
    }
    .supplier-card:hover {
        transform: translateY(-4px);
        box-shadow: 0 8px 16px rgba(0,0,0,0.25);
    }
    .supplier-card .card-title {
        font-size: 1.5rem;
        font-weight: 700;
        margin-bottom: 0.75rem;
    }
    .supplier-card .card-info {
        font-size: 0.95rem;
        opacity: 0.95;
        margin-bottom: 0.5rem;
    }
    .supplier-card .card-actions {
        margin-top: 1rem;
        display: flex;
        gap: 0.5rem;
    }
    .btn-card-action {
        background: rgba(255,255,255,0.2);
        border: 1px solid rgba(255,255,255,0.3);
        color: white;
        padding: 0.4rem 1rem;
        border-radius: 6px;
        font-weight: 600;
        transition: all 0.2s;
    }
    .btn-card-action:hover {
        background: rgba(255,255,255,0.35);
        color: white;
        border-color: rgba(255,255,255,0.5);
    }
    .detail-panel {
        background: #f8f9fa;
        border-radius: 12px;
        padding: 2rem;
        margin-top: 2rem;
        display: none;
    }
    .detail-panel.active {
        display: block;
        animation: fadeIn 0.3s ease-in;
    }
    @@keyframes fadeIn {
        from { opacity: 0; transform: translateY(-10px); }
        to { opacity: 1; transform: translateY(0); }
    }
    .balance-summary {
        background: white;
        border-radius: 8px;
        padding: 1.5rem;
        margin-bottom: 1.5rem;
        box-shadow: 0 2px 8px rgba(0,0,0,0.08);
    }
    .balance-item {
        display: flex;
        justify-content: space-between;
        padding: 0.75rem 0;
        border-bottom: 1px solid #e9ecef;
    }
    .balance-item:last-child {
        border-bottom: none;
        font-weight: 700;
        font-size: 1.1rem;
        color: #dc3545;
    }
    .orders-table {
        background: white;
        border-radius: 8px;
        padding: 1.5rem;
        box-shadow: 0 2px 8px rgba(0,0,0,0.08);
    }
    .table thead th {
        background-color: #f8f9fa;
        font-weight: 600;
        text-transform: uppercase;
        font-size: 0.85rem;
        letter-spacing: 0.5px;
        border-bottom: 2px solid #dee2e6;
    }
    .section-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 2rem;
    }
</style>

<div class="container-fluid px-4 py-3">
    <div class="section-header">
        <h1 class="h2 mb-0 fw-bold">Suppliers</h1>
        <button class="btn btn-primary" onclick="createSupplier()">
            <i class="bi bi-plus-circle"></i> Add New Supplier
        </button>
    </div>

    <!-- Suppliers Cards Grid -->
    <div id="suppliers-grid" class="row">
        <div class="col-12 text-center py-5">
            <div class="spinner-border text-primary" role="status"></div>
            <p class="mt-3 text-muted">Loading suppliers...</p>
        </div>
    </div>

    <!-- Supplier Detail Panel (hidden initially) -->
    <div id="detail-panel" class="detail-panel">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h3 class="fw-bold mb-0" id="detail-supplier-name">Supplier Details</h3>
            <button class="btn btn-outline-secondary" id="btn-close-detail">
                <i class="bi bi-x-circle"></i> Close
            </button>
        </div>

        <!-- Supplier Info -->
        <div class="row mb-4">
            <div class="col-md-6">
                <div class="balance-summary">
                    <h5 class="fw-bold mb-3">Supplier Information</h5>
                    <div id="supplier-info"></div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="balance-summary">
                    <h5 class="fw-bold mb-3">Balance Summary</h5>
                    <div id="balance-info"></div>
                </div>
            </div>
        </div>

    </div>

        <!-- Purchase Orders List -->
        <div id="orders-list-section" class="orders-table">
            <h5 class="fw-bold mb-3">Purchase Orders</h5>
            <div class="table-responsive">
                <table class="table table-hover align-middle" id="purchase-orders-table">
                    <thead>
                        <tr>
                            <th>Order #</th>
                            <th>Date</th>
                            <th>Status</th>
                            <th class="text-end">Subtotal</th>
                            <th class="text-end">VAT</th>
                            <th class="text-end">Total</th>
                            <th>Products</th>
                            <th class="text-end">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td colspan="8" class="text-center text-muted py-4">
                                Loading orders...
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>

        <!-- Order Details Section (Hidden by default) -->
        <div id="order-details-section" style="display: none;">
            <div class="d-flex justify-content-between align-items-center mb-3">
                <h5 class="fw-bold mb-0">Order Details: <span id="detail-order-number" class="text-primary"></span></h5>
                <button class="btn btn-sm btn-outline-secondary" onclick="closeOrderDetails()">
                    <i class="bi bi-arrow-left"></i> Back to Orders
                </button>
            </div>

            <div class="card mb-3 border-0 shadow-sm">
                <div class="card-body">
                    <div class="row mb-3">
                        <div class="col-md-6">
                            <h6 class="text-muted text-uppercase small fw-bold">General Info</h6>
                            <div class="mb-1"><strong>Date:</strong> <span id="detail-order-date"></span></div>
                            <div class="mb-1"><strong>Status:</strong> <span id="detail-order-status"></span></div>
                            <div class="mb-1"><strong>Created By:</strong> <span id="detail-created-by"></span></div>
                        </div>
                        <div class="col-md-6">
                            <h6 class="text-muted text-uppercase small fw-bold">Financials</h6>
                            <div class="mb-1"><strong>Subtotal:</strong> <span id="detail-subtotal"></span></div>
                            <div class="mb-1"><strong>Tax:</strong> <span id="detail-tax"></span></div>
                            <div class="mb-1"><strong>Total:</strong> <span id="detail-total" class="fw-bold text-success fs-5"></span></div>
                        </div>
                    </div>

                    <h6 class="text-muted text-uppercase small fw-bold mt-4 mb-2">Line Items</h6>
                    <div class="table-responsive">
                        <table class="table table-sm table-bordered">
                            <thead class="table-light">
                                <tr>
                                    <th>Product</th>
                                    <th class="text-center">Qty</th>
                                    <th class="text-end">Unit Price</th>
                                    <th class="text-end">Total</th>
                                </tr>
                            </thead>
                            <tbody id="detail-lines-body"></tbody>
                        </table>
                    </div>

                    <div class="mt-3">
                        <h6 class="text-muted text-uppercase small fw-bold">Notes</h6>
                        <p id="detail-notes" class="text-muted fst-italic mb-0"></p>
                    </div>
                    
                    <div class="mt-3">
                        <h6 class="text-muted text-uppercase small fw-bold">Expenses</h6>
                        <div class="mb-1"><strong>Receipt Expenses:</strong> <span id="detail-expenses"></span></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Create Supplier Modal -->
<div class="modal fade" id="createSupplierModal" tabindex="-1" aria-labelledby="createSupplierModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-primary text-white">
                <h5 class="modal-title fw-bold" id="createSupplierModalLabel">
                    <i class="bi bi-person-plus-fill me-2"></i>Add New Supplier
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                @Html.AntiForgeryToken()
                <div class="mb-3">
                    <label for="createSupplierName" class="form-label fw-bold">Name</label>
                    <input type="text" class="form-control" id="createSupplierName" required />
                </div>
                <div class="mb-3">
                    <label for="createSupplierPhone" class="form-label fw-bold">Phone</label>
                    <input type="text" class="form-control" id="createSupplierPhone" />
                </div>
                <div class="mb-3">
                    <label for="createSupplierEmail" class="form-label fw-bold">Email</label>
                    <input type="email" class="form-control" id="createSupplierEmail" />
                </div>
                <div class="mb-3">
                    <label for="createSupplierAddress" class="form-label fw-bold">Address</label>
                    <textarea class="form-control" id="createSupplierAddress" rows="2"></textarea>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-primary fw-bold" id="btn-save-new-supplier">Create Supplier</button>
            </div>
        </div>
    </div>
</div>

<!-- Edit Supplier Modal -->
<div class="modal fade" id="editSupplierModal" tabindex="-1" aria-labelledby="editSupplierModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-primary text-white">
                <h5 class="modal-title fw-bold" id="editSupplierModalLabel">
                    <i class="bi bi-pencil-square me-2"></i>Edit Supplier
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                @Html.AntiForgeryToken()
                <input type="hidden" id="editSupplierId" />
                <div class="mb-3">
                    <label for="editSupplierName" class="form-label fw-bold">Name</label>
                    <input type="text" class="form-control" id="editSupplierName" required />
                </div>
                <div class="mb-3">
                    <label for="editSupplierPhone" class="form-label fw-bold">Phone</label>
                    <input type="text" class="form-control" id="editSupplierPhone" />
                </div>
                <div class="mb-3">
                    <label for="editSupplierEmail" class="form-label fw-bold">Email</label>
                    <input type="email" class="form-control" id="editSupplierEmail" />
                </div>
                <div class="mb-3">
                    <label for="editSupplierAddress" class="form-label fw-bold">Address</label>
                    <textarea class="form-control" id="editSupplierAddress" rows="2"></textarea>
                </div>
                <div class="form-check form-switch">
                    <input class="form-check-input" type="checkbox" id="editSupplierIsActive" checked />
                    <label class="form-check-label fw-bold" for="editSupplierIsActive">Active</label>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-primary fw-bold" id="btn-save-supplier">Save Changes</button>
            </div>
        </div>
    </div>
</div>

<!-- Cancel Order Modal -->
<div class="modal fade" id="cancelOrderModal" tabindex="-1" aria-labelledby="cancelOrderModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-warning">
                <h5 class="modal-title fw-bold" id="cancelOrderModalLabel">
                    <i class="bi bi-exclamation-triangle me-2"></i>Cancel Purchase Order
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p>Are you sure you want to cancel this purchase order?</p>
                <p class="text-warning fw-bold">
                    <i class="bi bi-info-circle"></i> This will change the order status to "Cancelled".
                </p>
                <input type="hidden" id="cancelOrderId" />
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">No, Keep Order</button>
                <button type="button" class="btn btn-warning fw-bold" id="btn-confirm-cancel">Yes, Cancel Order</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
    <script>
        (function () {
            let currentSupplierId = null;
            let allSuppliers = [];

            // Load all suppliers
            async function loadSuppliers() {
                try {
                    const response = await fetch('/api/suppliers');
                    if (!response.ok) throw new Error('Failed to load suppliers');
                    
                    allSuppliers = await response.json();
                    renderSupplierCards(allSuppliers);
                } catch (error) {
                    console.error('Error loading suppliers:', error);
                    document.getElementById('suppliers-grid').innerHTML = `
                        <div class="col-12 text-center text-danger py-5">
                            <i class="bi bi-exclamation-circle" style="font-size: 3rem;"></i>
                            <p class="mt-3">Failed to load suppliers. Please refresh the page.</p>
                        </div>
                    `;
                }
            }

            function renderSupplierCards(suppliers) {
                const grid = document.getElementById('suppliers-grid');
                
                if (!suppliers || suppliers.length === 0) {
                    grid.innerHTML = `
                        <div class="col-12 text-center py-5">
                            <p class="text-muted">No suppliers found. <button onclick="createSupplier()" class="btn btn-link">Add your first supplier</button></p>
                        </div>
                    `;
                    return;
                }

                grid.innerHTML = suppliers.map(s => `
                    <div class="col-12 col-md-6 col-lg-4">
                        <div class="supplier-card">
                            <div class="card-title">${escapeHtml(s.name)}</div>
                            <div class="card-info">
                                <i class="bi bi-telephone"></i> ${escapeHtml(s.phone || 'N/A')}
                            </div>
                            <div class="card-info">
                                <i class="bi bi-envelope"></i> ${escapeHtml(s.email || 'N/A')}
                            </div>
                            <div class="card-info">
                                <i class="bi bi-geo-alt"></i> ${escapeHtml(s.address || 'N/A')}
                            </div>
                            <div class="card-info">
                                <span class="badge ${s.isActive ? 'bg-success' : 'bg-secondary'}">${s.isActive ? 'Active' : 'Inactive'}</span>
                            </div>
                            <div class="card-actions">
                                <button class="btn btn-card-action" onclick="editSupplier(${s.id})">
                                    <i class="bi bi-pencil"></i> Edit
                                </button>
                                <button class="btn btn-card-action" onclick="viewSupplierHistory(${s.id})">
                                    <i class="bi bi-clock-history"></i> View History
                                </button>
                            </div>
                        </div>
                    </div>
                `).join('');
            }

            // Create Modal
            window.createSupplier = function() {
                document.getElementById('createSupplierName').value = '';
                document.getElementById('createSupplierPhone').value = '';
                document.getElementById('createSupplierEmail').value = '';
                document.getElementById('createSupplierAddress').value = '';
                new bootstrap.Modal(document.getElementById('createSupplierModal')).show();
            };

            // Save New Supplier
            document.getElementById('btn-save-new-supplier').addEventListener('click', async function() {
                const data = {
                    name: document.getElementById('createSupplierName').value,
                    phone: document.getElementById('createSupplierPhone').value,
                    email: document.getElementById('createSupplierEmail').value,
                    address: document.getElementById('createSupplierAddress').value
                };

                try {
                    const response = await fetch('/api/suppliers', {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json',
                            'RequestVerificationToken': document.querySelector('[name="__RequestVerificationToken"]').value
                        },
                        body: JSON.stringify(data)
                    });

                    if (!response.ok) throw new Error('Failed to create supplier');

                    bootstrap.Modal.getInstance(document.getElementById('createSupplierModal')).hide();
                    await loadSuppliers();
                    
                    // Optionally scroll to top or show success toast
                    window.scrollTo({ top: 0, behavior: 'smooth' });
                } catch (error) {
                    console.error('Error creating supplier:', error);
                    alert('Failed to create supplier. Please try again.');
                }
            });

            // Edit supplier
            window.editSupplier = function(id) {
                const supplier = allSuppliers.find(s => s.id === id);
                if (!supplier) return;

                document.getElementById('editSupplierId').value = supplier.id;
                document.getElementById('editSupplierName').value = supplier.name;
                document.getElementById('editSupplierPhone').value = supplier.phone || '';
                document.getElementById('editSupplierEmail').value = supplier.email || '';
                document.getElementById('editSupplierAddress').value = supplier.address || '';
                document.getElementById('editSupplierIsActive').checked = supplier.isActive;

                new bootstrap.Modal(document.getElementById('editSupplierModal')).show();
            };

            // Save supplier
            document.getElementById('btn-save-supplier').addEventListener('click', async function() {
                const id = parseInt(document.getElementById('editSupplierId').value);
                const data = {
                    id: id,
                    name: document.getElementById('editSupplierName').value,
                    phone: document.getElementById('editSupplierPhone').value,
                    email: document.getElementById('editSupplierEmail').value,
                    address: document.getElementById('editSupplierAddress').value,
                    isActive: document.getElementById('editSupplierIsActive').checked
                };

                try {
                    const response = await fetch(`/api/suppliers/${id}`, {
                        method: 'PUT',
                        headers: {
                            'Content-Type': 'application/json',
                            'RequestVerificationToken': document.querySelector('[name="__RequestVerificationToken"]').value
                        },
                        body: JSON.stringify(data)
                    });

                    if (!response.ok) throw new Error('Failed to update supplier');

                    bootstrap.Modal.getInstance(document.getElementById('editSupplierModal')).hide();
                    await loadSuppliers();
                    
                    if (currentSupplierId === id) {
                        viewSupplierHistory(id);
                    }
                } catch (error) {
                    console.error('Error updating supplier:', error);
                    alert('Failed to update supplier. Please try again.');
                }
            });

            // View supplier history
            window.viewSupplierHistory = async function(id) {
                currentSupplierId = id;
                const supplier = allSuppliers.find(s => s.id === id);

                try {
                    // Fetch detailed supplier info with balance
                    const detailResponse = await fetch(`/api/suppliers/${id}`);
                    if (!detailResponse.ok) throw new Error('Failed to load supplier details');
                    const detailData = await detailResponse.json();

                    // Fetch purchase orders
                    const ordersResponse = await fetch(`/api/suppliers/${id}/purchase-orders`);
                    if (!ordersResponse.ok) throw new Error('Failed to load purchase orders');
                    const orders = await ordersResponse.json();

                    // Show detail panel
                    document.getElementById('detail-supplier-name').textContent = supplier.name;
                    
                    // Reset views: Show list, hide details
                    document.getElementById('orders-list-section').style.display = 'block';
                    document.getElementById('order-details-section').style.display = 'none';
                    
                    // Render supplier info
                    document.getElementById('supplier-info').innerHTML = `
                        <div class="balance-item">
                            <span>Name:</span>
                            <strong>${escapeHtml(detailData.supplier.name)}</strong>
                        </div>
                        <div class="balance-item">
                            <span>Phone:</span>
                            <strong>${escapeHtml(detailData.supplier.phone || 'N/A')}</strong>
                        </div>
                        <div class="balance-item">
                            <span>Email:</span>
                            <strong>${escapeHtml(detailData.supplier.email || 'N/A')}</strong>
                        </div>
                        <div class="balance-item">
                            <span>Address:</span>
                            <strong>${escapeHtml(detailData.supplier.address || 'N/A')}</strong>
                        </div>
                        <div class="balance-item">
                            <span>Status:</span>
                            <span class="badge ${detailData.supplier.isActive ? 'bg-success' : 'bg-secondary'}">
                                ${detailData.supplier.isActive ? 'Active' : 'Inactive'}
                            </span>
                        </div>
                    `;

                    // Render balance
                    document.getElementById('balance-info').innerHTML = `
                        <div class="balance-item">
                            <span>Total Orders:</span>
                            <strong>${formatCurrency(detailData.balance.totalOrders)}</strong>
                        </div>
                        <div class="balance-item">
                            <span>Total Payments:</span>
                            <strong>${formatCurrency(detailData.balance.totalPayments)}</strong>
                        </div>
                        <div class="balance-item">
                            <span>Outstanding Balance:</span>
                            <strong class="text-danger">${formatCurrency(detailData.balance.balance)}</strong>
                        </div>
                    `;

                    // Render purchase orders
                    renderPurchaseOrders(orders);

                    document.getElementById('detail-panel').classList.add('active');
                    document.getElementById('detail-panel').scrollIntoView({ behavior: 'smooth' });

                } catch (error) {
                    console.error('Error loading supplier details:', error);
                    alert('Failed to load supplier details. Please try again.');
                }
            };

            // View order details
            window.viewOrderDetails = async function(id) {
                try {
                    const response = await fetch(`/api/purchase-orders/${id}`);
                    if (!response.ok) throw new Error('Failed to load order details');
                    const order = await response.json();

                    // Fill details
                    document.getElementById('detail-order-number').textContent = order.orderNumber;
                    document.getElementById('detail-order-date').textContent = formatDate(order.createdUtc);
                    
                    const statusText = order.status === 0 ? 'Pending' : order.status === 1 ? 'Received' : 'Cancelled';
                    const statusClass = order.status === 0 ? 'text-warning' : order.status === 1 ? 'text-success' : 'text-secondary';
                    document.getElementById('detail-order-status').innerHTML = `<span class="fw-bold ${statusClass}">${statusText}</span>`;
                    
                    document.getElementById('detail-created-by').textContent = order.createdByUserDisplayName || 'Unknown';
                    
                    document.getElementById('detail-subtotal').textContent = formatCurrency(order.subtotal);
                    document.getElementById('detail-tax').textContent = formatCurrency(order.vatAmount + order.manufacturingTaxAmount);
                    document.getElementById('detail-total').textContent = formatCurrency(order.totalAmount);
                    document.getElementById('detail-expenses').textContent = formatCurrency(order.receiptExpenses);
                    
                    document.getElementById('detail-notes').textContent = order.note || 'No notes provided.';

                    // Fill lines
                    const linesBody = document.getElementById('detail-lines-body');
                    if (order.lines && order.lines.length > 0) {
                        linesBody.innerHTML = order.lines.map(line => `
                            <tr>
                                <td>
                                    <div class="fw-bold">${escapeHtml(line.productName)}</div>
                                    <div class="small text-muted">
                                        ${line.batchNumber ? `Batch: ${escapeHtml(line.batchNumber)}` : ''}
                                    </div>
                                </td>
                                <td class="text-center">${line.quantity} ${line.unit}</td>
                                <td class="text-end">${formatCurrency(line.unitPrice)}</td>
                                <td class="text-end fw-bold">${formatCurrency(line.lineTotal)}</td>
                            </tr>
                        `).join('');
                    } else {
                        linesBody.innerHTML = '<tr><td colspan="4" class="text-center text-muted">No items in this order.</td></tr>';
                    }

                    // Show/Hide sections
                    document.getElementById('orders-list-section').style.display = 'none';
                    document.getElementById('order-details-section').style.display = 'block';

                } catch (error) {
                    console.error('Error loading order details:', error);
                    alert('Failed to load order details. Please try again.');
                }
            };

            // Close order details
            window.closeOrderDetails = function() {
                document.getElementById('order-details-section').style.display = 'none';
                document.getElementById('orders-list-section').style.display = 'block';
            };

            function renderPurchaseOrders(orders) {
                const tbody = document.querySelector('#purchase-orders-table tbody');
                
                if (!orders || orders.length === 0) {
                    tbody.innerHTML = `
                        <tr>
                            <td colspan="8" class="text-center text-muted py-4">No purchase orders found for this supplier.</td>
                        </tr>
                    `;
                    return;
                }

                tbody.innerHTML = orders.map(order => {
                    const statusBadge = order.status === 0 ? 'bg-warning text-dark' : 
                                       order.status === 1 ? 'bg-success' : 'bg-secondary';
                    const statusText = order.status === 0 ? 'Pending' : 
                                      order.status === 1 ? 'Received' : 'Cancelled';
                    
                    const products = order.lines.map(l => `${l.productName} (${l.quantity} ${l.unit})`).join(', ');
                    
                    return `
                        <tr>
                            <td><code class="text-primary">${escapeHtml(order.orderNumber)}</code></td>
                            <td>${formatDate(order.createdUtc)}</td>
                            <td><span class="badge ${statusBadge}">${statusText}</span></td>
                            <td class="text-end">${formatCurrency(order.subtotal)}</td>
                            <td class="text-end">${formatCurrency(order.vatAmount)}</td>
                            <td class="text-end fw-bold">${formatCurrency(order.totalAmount)}</td>
                            <td class="text-truncate" style="max-width: 300px;" title="${escapeHtml(products)}">${escapeHtml(products)}</td>
                            <td class="text-end">
                                <button class="btn btn-sm btn-outline-info" onclick="viewOrderDetails(${order.id})">View</button>
                                ${order.status === 1 ? `<button class="btn btn-sm btn-outline-warning" onclick="cancelOrder(${order.id})">Cancel</button>` : ''}
                            </td>
                        </tr>
                    `;
                }).join('');
            }

            // Cancel order
            window.cancelOrder = function(orderId) {
                document.getElementById('cancelOrderId').value = orderId;
                new bootstrap.Modal(document.getElementById('cancelOrderModal')).show();
            };

            document.getElementById('btn-confirm-cancel').addEventListener('click', async function() {
                const orderId = parseInt(document.getElementById('cancelOrderId').value);
                
                try {
                    const antiForgeryToken = document.querySelector('[name="__RequestVerificationToken"]').value;
                    const formData = new FormData();
                    formData.append('__RequestVerificationToken', antiForgeryToken);
                    formData.append('status', '2'); // Cancelled

                    const response = await fetch(`/PurchaseOrders/UpdateStatus?id=${orderId}`, {
                        method: 'POST',
                        body: formData
                    });

                    if (!response.ok) throw new Error('Failed to cancel order');

                    bootstrap.Modal.getInstance(document.getElementById('cancelOrderModal')).hide();
                    
                    // Refresh supplier history
                    if (currentSupplierId) {
                        viewSupplierHistory(currentSupplierId);
                        // Also refresh details if open
                        if (document.getElementById('order-details-section').style.display === 'block') {
                            viewOrderDetails(orderId);
                        }
                    }
                } catch (error) {
                    console.error('Error cancelling order:', error);
                    alert('Failed to cancel order. Please try again.');
                }
            });

            // Close detail panel
            document.getElementById('btn-close-detail').addEventListener('click', function() {
                document.getElementById('detail-panel').classList.remove('active');
                document.getElementById('order-details-section').style.display = 'none';
                document.getElementById('orders-list-section').style.display = 'block';
                currentSupplierId = null;
            });

            // Helper functions
            function escapeHtml(text) {
                if (!text) return '';
                const div = document.createElement('div');
                div.textContent = text;
                return div.innerHTML;
            }

            function formatCurrency(amount) {
                return new Intl.NumberFormat('en-US', {
                    style: 'currency',
                    currency: 'USD',
                    minimumFractionDigits: 2
                }).format(amount);
            }

            function formatDate(dateString) {
                const date = new Date(dateString);
                return date.toLocaleDateString('en-US', {
                    year: 'numeric',
                    month: 'short',
                    day: 'numeric'
                });
            }

            // Initialize
            loadSuppliers();
        })();
    </script>
}
