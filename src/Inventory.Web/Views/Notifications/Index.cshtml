@{
    ViewData["Title"] = "Notifications";
}

<div class="container-fluid py-4">
    <div class="d-flex justify-content-between align-items-center mb-5">
        <h1 class="display-3 fw-black text-uppercase mb-0 text-danger">Notifications</h1>
        <button class="neo-btn" onclick="location.reload()"><i class="bi bi-arrow-clockwise"></i> REFRESH</button>
    </div>

    <div class="neo-card p-4 bg-white" style="border-width: 3px;">
        <h4 class="fw-black text-uppercase mb-4 border-bottom border-2 pb-2">Upcoming Payments (Next 7 Days)</h4>
        
        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0">
                <thead class="table-light">
                    <tr>
                        <th>MESSAGE</th>
                        <th>DEADLINE</th>
                        <th>DAYS LEFT</th>
                        <th class="text-end">AMOUNT DUE</th>
                        <th class="text-end">ACTION</th>
                    </tr>
                </thead>
                <tbody id="notifications-table-body">
                    <tr><td colspan="5" class="text-center py-5 fw-bold">LOADING NOTIFICATIONS...</td></tr>
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        const formatCurrency = (a) => new Intl.NumberFormat('en-US', { style:'currency', currency:'USD' }).format(a);
        const formatDate = (i) => new Date(i).toLocaleDateString('en-US', { year:'numeric', month:'short', day:'numeric' });

        async function loadNotifications() {
            try {
                const r = await fetch('/api/notifications');
                if (!r.ok) throw new Error();
                const notifs = await r.json();
                renderNotifications(notifs);
            } catch (e) {
                document.getElementById('notifications-table-body').innerHTML = '<tr><td colspan="5" class="text-center text-danger fw-bold py-5">FAILED TO LOAD NOTIFICATIONS.</td></tr>';
            }
        }

        function renderNotifications(notifs) {
            const tbody = document.getElementById('notifications-table-body');
            
            if (!notifs || notifs.length === 0) {
                tbody.innerHTML = '<tr><td colspan="5" class="text-center py-5 fw-bold text-muted">ALL CAUGHT UP! NO UPCOMING PAYMENTS.</td></tr>';
                return;
            }

            tbody.innerHTML = notifs.map(n => `
                <tr>
                    <td class="fw-bold text-dark">${n.message}</td>
                    <td class="fw-bold">${formatDate(n.paymentDeadline)}</td>
                    <td>
                        <span class="badge ${n.daysUntilDue <= 3 ? 'bg-danger' : 'bg-warning text-dark'}">
                            ${n.daysUntilDue === 0 ? 'TODAY' : n.daysUntilDue + ' DAYS'}
                        </span>
                    </td>
                    <td class="text-end fw-black text-danger">${formatCurrency(n.remainingAmount)}</td>
                    <td class="text-end">
                        <button class="neo-btn neo-btn-primary btn-sm" onclick="viewOrder('${n.type}', ${n.orderId})">VIEW ORDER</button>
                    </td>
                </tr>
            `).join('');
        }

        function viewOrder(type, id) {
            const returnUrl = encodeURIComponent(window.location.pathname);
            if (type === 'Sales') {
                window.location.href = `/SalesOrders/Details/${id}?returnUrl=${returnUrl}`;
            } else {
                window.location.href = `/PurchaseOrders/Details/${id}?returnUrl=${returnUrl}`;
            }
        }

        document.addEventListener('DOMContentLoaded', loadNotifications);
    </script>
}
