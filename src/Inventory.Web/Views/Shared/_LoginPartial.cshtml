@using Microsoft.AspNetCore.Identity
@using Inventory.Infrastructure.Data
@inject SignInManager<AppUser> SignInManager
@inject UserManager<AppUser> UserManager

<ul class="navbar-nav gap-2 align-items-center">
@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-item">
        @{
            var displayName =
                User.FindFirst("display_name")?.Value
                ?? (User.Identity?.Name?.Split('@')[0])
                ?? "User";
        }
        <span class="fw-black text-uppercase small me-2" style="letter-spacing: 1px;">@displayName</span>
    </li>
    <li class="nav-item">
        <form class="d-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index","Home", new { area = "" })" method="post">
            <button type="submit" class="neo-btn neo-btn-danger btn-sm py-1">LOGOUT</button>
        </form>
    </li>
}
else
{
    <li class="nav-item">
        <a class="neo-btn neo-btn-primary btn-sm py-1" asp-area="Identity" asp-page="/Account/Login">LOGIN</a>
    </li>
}
</ul>
