<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Alyarmouk Inventory</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Public+Sans:wght@400;700;900&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Inventory.Web.styles.css" asp-append-version="true" />
</head>
<body class="bg-light">
    <header>
        <nav class="navbar navbar-expand-sm navbar-light mb-4">
            <div class="container-fluid px-0">
                <a class="navbar-brand" asp-area="" asp-controller="Dashboard" asp-action="Index">
                    ALYARMOUK
                    <span>STOCK SYSTEMS</span>
                </a>
                <button class="navbar-toggler me-3" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Dashboard" ? "active" : "")" asp-area="" asp-controller="Dashboard" asp-action="Index">DASHBOARD</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Suppliers" ? "active" : "")" asp-area="" asp-controller="Suppliers" asp-action="Index">SUPPLIERS</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Customers" ? "active" : "")" asp-area="" asp-controller="Customers" asp-action="Index">CUSTOMERS</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Activity" ? "active" : "")" asp-area="" asp-controller="Activity" asp-action="Index">TRANSACTIONS</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Notifications" ? "active" : "")" asp-area="" asp-controller="Notifications" asp-action="Index">DEADLINES</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Financial" ? "active" : "")" asp-area="" asp-controller="Financial" asp-action="Index">FINANCIAL</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "RecordHistory" ? "active" : "")" asp-area="" asp-controller="RecordHistory" asp-action="Index">RECORD HISTORY</a>
                        </li>
                    </ul>

                    <ul class="navbar-nav pe-4">
                        @if (User?.Identity?.IsAuthenticated ?? false)
                        {
                            <li class="nav-item d-flex align-items-center me-4">
                                @{
                                    var displayName =
                                        User.FindFirst("display_name")?.Value
                                        ?? (User.Identity?.Name?.Split('@')[0])
                                        ?? "User";
                                }
                                <span class="fw-bold text-uppercase small text-muted"><span class="text-black">@displayName</span></span>
                            </li>
                            <li class="nav-item">
                                <form class="d-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="/" method="post">
                                    <button type="submit" class="neo-btn neo-btn-danger btn-sm">LOGOUT</button>
                                </form>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="neo-btn neo-btn-primary" asp-area="Identity" asp-page="/Account/Login">LOGIN</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container-fluid px-4 main-content">
        <main role="main" class="pb-5">
            @RenderBody()
        </main>
    </div>

    <!-- Global Confirmation Modal -->
    <div class="modal fade" id="appConfirmModal" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content border-3 border-black">
                <div class="modal-header bg-black text-white border-0">
                    <h5 class="modal-title fw-black" id="appConfirmModalTitle">CONFIRM ACTION</h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body p-4">
                    <p class="fw-bold mb-3" id="appConfirmModalMessage"></p>
                </div>
                <div class="modal-footer border-0 p-3">
                    <button type="button" class="neo-btn neo-btn-secondary" data-bs-dismiss="modal">CANCEL</button>
                    <button type="button" class="neo-btn neo-btn-danger" id="appConfirmModalOkBtn">OK</button>
                </div>
            </div>
        </div>
    </div>

    <div class="toast-container position-fixed bottom-0 end-0 p-3" id="appToastContainer" style="z-index: 1100;"></div>

    <footer class="footer py-5 bg-black text-white mt-auto">
        <div class="container-fluid px-4">
            <div class="d-flex justify-content-between align-items-center">
                <span class="fw-bold">&copy; 2026 ALYARMOUK INVENTORY MANAGER</span>
                <div>
                </div>
            </div>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
