<!-- Cancel Order Modal -->
<div class="modal fade" id="cancelOrderModal" tabindex="-1" aria-labelledby="cancelOrderModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-warning">
                <h5 class="modal-title fw-bold" id="cancelOrderModalLabel">
                    <i class="bi bi-exclamation-triangle me-2"></i>Cancel Sales Order
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p>Are you sure you want to cancel this sales order?</p>
                <p class="text-warning fw-bold">
                    <i class="bi bi-info-circle"></i> This will change the order status to "Cancelled".
                </p>
                <input type="hidden" id="cancelOrderId" />
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">No, Keep Order</button>
                <button type="button" class="btn btn-warning fw-bold" id="btn-confirm-cancel">Yes, Cancel Order</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
    <script>
        (function () {
            let currentCustomerId = null;
            let allCustomers = [];

            // Load all customers
            async function loadCustomers() {
                try {
                    const response = await fetch('/api/customers');
                    if (!response.ok) throw new Error('Failed to load customers');
                    
                    allCustomers = await response.json();
                    renderCustomerCards(allCustomers);
                } catch (error) {
                    console.error('Error loading customers:', error);
                    document.getElementById('customers-grid').innerHTML = `
                        <div class="col-12 text-center text-danger py-5">
                            <i class="bi bi-exclamation-circle" style="font-size: 3rem;"></i>
                            <p class="mt-3">Failed to load customers. Please refresh the page.</p>
                        </div>
                    `;
                }
            }

            function renderCustomerCards(customers) {
                const grid = document.getElementById('customers-grid');
                
                if (!customers || customers.length === 0) {
                    grid.innerHTML = `
                        <div class="col-12 text-center py-5">
                            <p class="text-muted">No customers found. <button onclick="createCustomer()" class="btn btn-link">Add your first customer</button></p>
                        </div>
                    `;
                    return;
                }

                grid.innerHTML = customers.map(c => `
                    <div class="col-12 col-md-6 col-lg-4">
                        <div class="customer-card">
                            <div class="card-title">${escapeHtml(c.name)}</div>
                            <div class="card-info">
                                <i class="bi bi-telephone"></i> ${escapeHtml(c.phone || 'N/A')}
                            </div>
                            <div class="card-info">
                                <i class="bi bi-envelope"></i> ${escapeHtml(c.email || 'N/A')}
                            </div>
                            <div class="card-info">
                                <i class="bi bi-geo-alt"></i> ${escapeHtml(c.address || 'N/A')}
                            </div>
                            <div class="card-info">
                                <i class="bi bi-calendar"></i> Since ${formatDate(c.createdUtc)}
                            </div>
                            <div class="card-actions">
                                <button class="btn btn-card-action" onclick="editCustomer(${c.id})">
                                    <i class="bi bi-pencil"></i> Edit
                                </button>
                                <button class="btn btn-card-action" onclick="viewCustomerHistory(${c.id})">
                                    <i class="bi bi-clock-history"></i> View History
                                </button>
                            </div>
                        </div>
                    </div>
                `).join('');
            }

            // Create Modal
            window.createCustomer = function() {
                document.getElementById('createCustomerName').value = '';
                document.getElementById('createCustomerPhone').value = '';
                document.getElementById('createCustomerEmail').value = '';
                document.getElementById('createCustomerAddress').value = '';
                new bootstrap.Modal(document.getElementById('createCustomerModal')).show();
            };

            // Save New Customer
            document.getElementById('btn-save-new-customer').addEventListener('click', async function() {
                const data = {
                    name: document.getElementById('createCustomerName').value,
                    phone: document.getElementById('createCustomerPhone').value,
                    email: document.getElementById('createCustomerEmail').value,
                    address: document.getElementById('createCustomerAddress').value
                };

                try {
                    const response = await fetch('/api/customers', {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json',
                            'RequestVerificationToken': document.querySelector('[name="__RequestVerificationToken"]').value
                        },
                        body: JSON.stringify(data)
                    });

                    if (!response.ok) throw new Error('Failed to create customer');

                    bootstrap.Modal.getInstance(document.getElementById('createCustomerModal')).hide();
                    await loadCustomers();
                    
                    window.scrollTo({ top: 0, behavior: 'smooth' });
                } catch (error) {
                    console.error('Error creating customer:', error);
                    alert('Failed to create customer. Please try again.');
                }
            });

            // Edit customer
            window.editCustomer = function(id) {
                const customer = allCustomers.find(c => c.id === id);
                if (!customer) return;

                document.getElementById('editCustomerId').value = customer.id;
                document.getElementById('editCustomerName').value = customer.name;
                document.getElementById('editCustomerPhone').value = customer.phone || '';
                document.getElementById('editCustomerEmail').value = customer.email || '';
                document.getElementById('editCustomerAddress').value = customer.address || '';

                new bootstrap.Modal(document.getElementById('editCustomerModal')).show();
            };

            // Save customer
            document.getElementById('btn-save-customer').addEventListener('click', async function() {
                const id = parseInt(document.getElementById('editCustomerId').value);
                const data = {
                    id: id,
                    name: document.getElementById('editCustomerName').value,
                    phone: document.getElementById('editCustomerPhone').value,
                    email: document.getElementById('editCustomerEmail').value,
                    address: document.getElementById('editCustomerAddress').value
                };

                try {
                    const response = await fetch(`/api/customers/${id}`, {
                        method: 'PUT',
                        headers: {
                            'Content-Type': 'application/json',
                            'RequestVerificationToken': document.querySelector('[name="__RequestVerificationToken"]').value
                        },
                        body: JSON.stringify(data)
                    });

                    if (!response.ok) throw new Error('Failed to update customer');

                    bootstrap.Modal.getInstance(document.getElementById('editCustomerModal')).hide();
                    await loadCustomers();
                    
                    if (currentCustomerId === id) {
                        viewCustomerHistory(id);
                    }
                } catch (error) {
                    console.error('Error updating customer:', error);
                    alert('Failed to update customer. Please try again.');
                }
            });

            // View customer history
            window.viewCustomerHistory = async function(id) {
                // Reset visibility states to show list and hide details
                document.getElementById('order-details-section').style.display = 'none';
                document.getElementById('orders-list-section').style.display = 'block';
                document.querySelector('#sales-orders-table tbody').innerHTML = '<tr><td colspan="9" class="text-center text-muted py-4"><div class="spinner-border spinner-border-sm text-success me-2"></div> Loading orders...</td></tr>';

                currentCustomerId = id;
                const customer = allCustomers.find(c => c.id === id);

                try {
                    // Fetch detailed customer info with balance
                    const detailResponse = await fetch(`/api/customers/${id}`);
                    if (!detailResponse.ok) throw new Error('Failed to load customer details');
                    const detailData = await detailResponse.json();

                    // Fetch sales orders
                    const ordersResponse = await fetch(`/api/customers/${id}/sales-orders`);
                    if (!ordersResponse.ok) throw new Error('Failed to load sales orders');
                    const orders = await ordersResponse.json();

                    // Show detail panel
                    document.getElementById('detail-customer-name').textContent = customer.name;
                    
                    // Render customer info
                    document.getElementById('customer-info').innerHTML = `
                        <div class="balance-item">
                            <span>Name:</span>
                            <strong>${escapeHtml(detailData.customer.name)}</strong>
                        </div>
                        <div class="balance-item">
                            <span>Phone:</span>
                            <strong>${escapeHtml(detailData.customer.phone || 'N/A')}</strong>
                        </div>
                        <div class="balance-item">
                            <span>Email:</span>
                            <strong>${escapeHtml(detailData.customer.email || 'N/A')}</strong>
                        </div>
                        <div class="balance-item">
                            <span>Address:</span>
                            <strong>${escapeHtml(detailData.customer.address || 'N/A')}</strong>
                        </div>
                        <div class="balance-item">
                            <span>Customer Since:</span>
                            <strong>${formatDate(detailData.customer.createdUtc)}</strong>
                        </div>
                    `;

                    // Render balance
                    document.getElementById('balance-info').innerHTML = `
                        <div class="balance-item">
                            <span>Total Pending:</span>
                            <strong>${formatCurrency(detailData.balance.totalPending)}</strong>
                        </div>
                        <div class="balance-item">
                            <span>Due Now:</span>
                            <strong class="text-success">${formatCurrency(detailData.balance.totalDueNow)}</strong>
                        </div>
                    `;

                    // Render sales orders
                    renderSalesOrders(orders);

                    document.getElementById('detail-panel').classList.add('active');
                    document.getElementById('detail-panel').scrollIntoView({ behavior: 'smooth' });

                } catch (error) {
                    console.error('Error loading customer details:', error);
                    alert('Failed to load customer details. Please try again.');
                }
            };

            // View order details
            window.viewOrderDetails = async function(id) {
                try {
                    const response = await fetch(`/api/sales-orders/${id}`);
                    if (!response.ok) throw new Error('Failed to load order details');
                    const order = await response.json();

                    // Fill details
                    document.getElementById('detail-order-number').textContent = order.orderNumber;
                    document.getElementById('detail-order-date').textContent = formatDate(order.orderDate);
                    
                    // Status Badge
                    const statusText = order.status === 0 ? 'Draft' : order.status === 1 ? 'Confirmed' : order.status === 2 ? 'Completed' : 'Cancelled';
                    const statusClass = order.status === 0 ? 'text-secondary' : order.status === 1 ? 'text-info' : order.status === 2 ? 'text-success' : 'text-danger';
                    document.getElementById('detail-order-status').innerHTML = `<span class="fw-bold ${statusClass}">${statusText}</span>`;

                    // Payment Info
                    const paymentStatusText = order.paymentStatus === 0 ? 'Pending' : 'Paid';
                    const paymentStatusClass = order.paymentStatus === 0 ? 'text-warning' : 'text-success';
                    document.getElementById('detail-payment-status').innerHTML = `<span class="fw-bold ${paymentStatusClass}">${paymentStatusText}</span>`;
                    
                    const paymentMethodText = order.paymentMethod === 1 ? 'Cash' : order.paymentMethod === 2 ? 'Check' : order.paymentMethod === 3 ? 'Bank Transfer' : 'Unknown';
                    document.getElementById('detail-payment-method').textContent = paymentMethodText;
                     
                    document.getElementById('detail-due-date').textContent = formatDate(order.dueDate);
                    
                    // Check Details
                    const checkSection = document.getElementById('check-details');
                    if (order.paymentMethod === 2) { // Check
                        checkSection.style.display = 'block';
                        
                        document.getElementById('detail-check-received').innerHTML = order.checkReceived 
                            ? '<span class="badge bg-success"><i class="bi bi-check-lg"></i> Yes</span>' 
                            : '<span class="badge bg-warning text-dark">No</span>';
                            
                        document.getElementById('detail-check-received-date').textContent = order.checkReceivedDate ? formatDate(order.checkReceivedDate) : '-';
                        
                        document.getElementById('detail-check-cashed').innerHTML = order.checkCashed 
                            ? '<span class="badge bg-success"><i class="bi bi-check-lg"></i> Yes</span>' 
                            : '<span class="badge bg-warning text-dark">No</span>';
                            
                        document.getElementById('detail-check-cashed-date').textContent = order.checkCashedDate ? formatDate(order.checkCashedDate) : '-';
                    } else {
                        checkSection.style.display = 'none';
                    }

                    // Bank Transfer Details
                    const bankSection = document.getElementById('bank-transfer-details');
                    if (order.paymentMethod === 3) { // Bank Transfer
                        bankSection.style.display = 'block';
                        document.getElementById('detail-transfer-id').textContent = order.transferId || '-';
                    } else {
                        bankSection.style.display = 'none';
                    }

                    // Documents Section
                    renderDocumentsSection(order);
                    
                    // Financials
                    document.getElementById('detail-subtotal').textContent = formatCurrency(order.subtotal);
                    document.getElementById('detail-vat').textContent = formatCurrency(order.vatAmount);
                    document.getElementById('detail-man-tax').textContent = formatCurrency(order.manufacturingTaxAmount);
                    document.getElementById('detail-total').textContent = formatCurrency(order.totalAmount);
                    
                    document.getElementById('detail-notes').textContent = order.note || 'No notes provided.';

                    // Fill lines
                    const linesBody = document.getElementById('detail-lines-body');
                    if (order.lines && order.lines.length > 0) {
                        linesBody.innerHTML = order.lines.map(line => `
                            <tr>
                                <td>
                                    <div class="fw-bold">${escapeHtml(line.productName)}</div>
                                </td>
                                <td class="text-center">${line.quantity}</td>
                                <td class="text-center small">${escapeHtml(line.unit)}</td>
                                <td class="text-end">${formatCurrency(line.unitPrice)}</td>
                                <td class="text-center">${line.isTaxInclusive ? '<i class="bi bi-check text-success"></i>' : '-'}</td>
                                <td class="text-end small">${line.lineVatAmount > 0 ? formatCurrency(line.lineVatAmount) : '-'}</td>
                                <td class="text-end small">${line.lineManufacturingTaxAmount > 0 ? formatCurrency(line.lineManufacturingTaxAmount) : '-'}</td>
                                <td class="text-end">${formatCurrency(line.lineSubtotal)}</td>
                                <td class="text-end fw-bold">${formatCurrency(line.lineTotal)}</td>
                            </tr>
                        `).join('');
                    } else {
                        linesBody.innerHTML = '<tr><td colspan="9" class="text-center text-muted">No items in this order.</td></tr>';
                    }

                    // Show/Hide sections
                    document.getElementById('orders-list-section').style.display = 'none';
                    document.getElementById('order-details-section').style.display = 'block';
                    
                    // Store current order for editing
                    window.currentDetailOrder = order;

                } catch (error) {
                    console.error('Error loading order details:', error);
                    alert('Failed to load order details. Please try again.');
                }
            };
            
            // Open Edit Payment Modal
            window.openEditPaymentModal = function() {
                const order = window.currentDetailOrder;
                if (!order) return;
                
                document.getElementById('editPaymentOrderId').value = order.id;
                document.getElementById('editPaymentStatus').value = order.paymentStatus;
                
                // Set Payment Method and handle UI toggle
                const methodSelect = document.getElementById('editPaymentMethod');
                // Default to Cash (1) if not set, or use order's method
                methodSelect.value = order.paymentMethod || 1; 
                
                togglePaymentMethodFields(); 
                
                // Populate Check Fields (even if hidden, so they are ready if toggled)
                document.getElementById('editCheckReceived').checked = order.checkReceived;
                document.getElementById('editCheckReceivedDate').value = order.checkReceivedDate ? order.checkReceivedDate.split('T')[0] : '';
                
                document.getElementById('editCheckCashed').checked = order.checkCashed;
                document.getElementById('editCheckCashedDate').value = order.checkCashedDate ? order.checkCashedDate.split('T')[0] : '';
                
                document.getElementById('editTransferId').value = order.transferId || '';
                
                new bootstrap.Modal(document.getElementById('editPaymentModal')).show();
            };
            
            // Toggle Method-specific Fields
            window.togglePaymentMethodFields = function() {
                const method = parseInt(document.getElementById('editPaymentMethod').value);
                const checkSection = document.getElementById('edit-check-fields');
                const bankSection = document.getElementById('edit-bank-transfer-fields');
                
                checkSection.style.display = method === 2 ? 'block' : 'none';
                bankSection.style.display = method === 3 ? 'block' : 'none';
            };
            
            // Save Payment Info
            window.savePaymentInfo = async function() {
                const orderId = document.getElementById('editPaymentOrderId').value;
                const paymentMethod = parseInt(document.getElementById('editPaymentMethod').value);
                
                const data = {
                    orderId: parseInt(orderId),
                    paymentStatus: parseInt(document.getElementById('editPaymentStatus').value),
                    paymentMethod: paymentMethod
                };
                
                if (paymentMethod === 2) { // Check
                    data.checkReceived = document.getElementById('editCheckReceived').checked;
                    const rDate = document.getElementById('editCheckReceivedDate').value;
                    data.checkReceivedDate = rDate ? new Date(rDate).toISOString() : null;
                    
                    data.checkCashed = document.getElementById('editCheckCashed').checked;
                    const cDate = document.getElementById('editCheckCashedDate').value;
                    data.checkCashedDate = cDate ? new Date(cDate).toISOString() : null;
                } else if (paymentMethod === 3) { // Bank Transfer
                    data.transferId = document.getElementById('editTransferId').value;
                } else {
                    // Start fresh if not check or bank transfer
                    data.checkReceived = false;
                    data.checkCashed = false;
                    data.checkReceivedDate = null;
                    data.checkCashedDate = null;
                    data.transferId = null;
                }
                
                try {
                    const response = await fetch(`/api/sales-orders/${orderId}/payment`, {
                        method: 'PUT',
                        headers: {
                            'Content-Type': 'application/json',
                            'RequestVerificationToken': document.querySelector('[name="__RequestVerificationToken"]').value
                        },
                        body: JSON.stringify(data)
                    });

                    if (!response.ok) {
                        const errorText = await response.text();
                        throw new Error(errorText || 'Failed to update payment info');
                    }
                    
                    bootstrap.Modal.getInstance(document.getElementById('editPaymentModal')).hide();
                    
                    // Refresh details
                    viewOrderDetails(orderId);
                    
                } catch (error) {
                    console.error('Error updating payment info:', error);
                    alert('Failed to update payment info. ' + error.message);
                }
            };

            function renderDocumentsSection(order) {
                const container = document.getElementById('pdf-section');
                
                let html = '<div class="row g-3">';
                
                // Invoice Section
                html += `
                    <div class="col-12 col-md-6">
                        <label class="text-muted text-uppercase small fw-bold mb-1 d-block">Invoice</label>
                        ${order.invoicePath ? `
                            <div class="alert alert-light border d-flex justify-content-between align-items-center p-2 mb-0">
                                <div class="text-truncate me-2">
                                    <i class="bi bi-file-earmark-pdf text-danger fs-5 me-2"></i>
                                    <span class="fw-bold text-dark">Invoice PDF</span>
                                    <div class="small text-muted" style="font-size: 0.75rem;">Uploaded: ${formatDate(order.invoiceUploadedUtc)}</div>
                                </div>
                                <div class="d-flex gap-1">
                                    <a href="${order.invoicePath}" target="_blank" class="btn btn-sm btn-outline-primary" title="Download">
                                        <i class="bi bi-download"></i>
                                    </a>
                                    <button onclick="deleteInvoice(${order.id})" class="btn btn-sm btn-outline-danger" title="Delete">
                                        <i class="bi bi-trash"></i>
                                    </button>
                                </div>
                            </div>
                        ` : `
                            <div class="input-group input-group-sm">
                                <input type="file" class="form-control" id="invoice-upload-${order.id}" accept=".pdf" aria-label="Upload Invoice">
                                <button class="btn btn-outline-secondary" type="button" onclick="uploadInvoice(${order.id})">Upload</button>
                            </div>
                        `}
                    </div>
                `;
                
                // Receipt Section
                html += `
                    <div class="col-12 col-md-6">
                        <label class="text-muted text-uppercase small fw-bold mb-1 d-block">Receipt</label>
                        ${order.receiptPath ? `
                            <div class="alert alert-light border d-flex justify-content-between align-items-center p-2 mb-0">
                                <div class="text-truncate me-2">
                                    <i class="bi bi-file-earmark-check text-success fs-5 me-2"></i>
                                    <span class="fw-bold text-dark">Receipt PDF</span>
                                    <div class="small text-muted" style="font-size: 0.75rem;">Uploaded: ${formatDate(order.receiptUploadedUtc)}</div>
                                </div>
                                <div class="d-flex gap-1">
                                    <a href="${order.receiptPath}" target="_blank" class="btn btn-sm btn-outline-primary" title="Download">
                                        <i class="bi bi-download"></i>
                                    </a>
                                    <button onclick="deleteReceipt(${order.id})" class="btn btn-sm btn-outline-danger" title="Delete">
                                        <i class="bi bi-trash"></i>
                                    </button>
                                </div>
                            </div>
                        ` : `
                            <div class="input-group input-group-sm">
                                <input type="file" class="form-control" id="receipt-upload-${order.id}" accept=".pdf" aria-label="Upload Receipt">
                                <button class="btn btn-outline-secondary" type="button" onclick="uploadReceipt(${order.id})">Upload</button>
                            </div>
                        `}
                    </div>
                `;
                
                html += '</div>';
                container.innerHTML = html;
            }

            window.uploadInvoice = async function(orderId) {
                const fileInput = document.getElementById(`invoice-upload-${orderId}`);
                if (!fileInput || !fileInput.files || fileInput.files.length === 0) {
                    alert('Please select a file first.');
                    return;
                }

                const file = fileInput.files[0];
                if (file.type !== 'application/pdf') {
                    alert('Only PDF files are allowed.');
                    return;
                }

                const formData = new FormData();
                formData.append('file', file);
                const antiForgeryToken = document.querySelector('[name="__RequestVerificationToken"]').value;
                
                try {
                    const response = await fetch(`/api/sales-orders/${orderId}/invoice`, {
                        method: 'POST',
                        headers: {
                             'RequestVerificationToken': antiForgeryToken
                        },
                        body: formData
                    });

                    if (!response.ok) {
                        const msg = await response.text();
                        throw new Error(msg || 'Failed to upload Invoice');
                    }
                    
                    viewOrderDetails(orderId);
                    
                } catch (error) {
                    console.error('Error uploading Invoice:', error);
                    alert('Failed to upload Invoice. ' + error.message);
                }
            };

            window.deleteInvoice = async function(orderId) {
                if (!confirm('Are you sure you want to delete this Invoice?')) return;

                try {
                    const response = await fetch(`/api/sales-orders/${orderId}/invoice`, {
                        method: 'DELETE',
                        headers: {
                            'RequestVerificationToken': document.querySelector('[name="__RequestVerificationToken"]').value
                        }
                    });

                    if (!response.ok) throw new Error('Failed to delete Invoice');

                    viewOrderDetails(orderId);

                } catch (error) {
                    console.error('Error deleting Invoice:', error);
                    alert('Failed to delete Invoice. Please try again.');
                }
            };

            window.uploadReceipt = async function(orderId) {
                const fileInput = document.getElementById(`receipt-upload-${orderId}`);
                if (!fileInput || !fileInput.files || fileInput.files.length === 0) {
                    alert('Please select a file first.');
                    return;
                }

                const file = fileInput.files[0];
                if (file.type !== 'application/pdf') {
                    alert('Only PDF files are allowed.');
                    return;
                }

                const formData = new FormData();
                formData.append('file', file);
                const antiForgeryToken = document.querySelector('[name="__RequestVerificationToken"]').value;
                
                try {
                    const response = await fetch(`/api/sales-orders/${orderId}/receipt`, {
                        method: 'POST',
                        headers: {
                             'RequestVerificationToken': antiForgeryToken
                        },
                        body: formData
                    });

                    if (!response.ok) {
                        const msg = await response.text();
                        throw new Error(msg || 'Failed to upload Receipt');
                    }
                    
                    viewOrderDetails(orderId);
                    
                } catch (error) {
                    console.error('Error uploading Receipt:', error);
                    alert('Failed to upload Receipt. ' + error.message);
                }
            };

            window.deleteReceipt = async function(orderId) {
                if (!confirm('Are you sure you want to delete this Receipt?')) return;

                try {
                    const response = await fetch(`/api/sales-orders/${orderId}/receipt`, {
                        method: 'DELETE',
                        headers: {
                            'RequestVerificationToken': document.querySelector('[name="__RequestVerificationToken"]').value
                        }
                    });

                    if (!response.ok) throw new Error('Failed to delete Receipt');

                    viewOrderDetails(orderId);

                } catch (error) {
                    console.error('Error deleting Receipt:', error);
                    alert('Failed to delete Receipt. Please try again.');
                }
            };

            // Close order details
            window.closeOrderDetails = function() {
                document.getElementById('order-details-section').style.display = 'none';
                document.getElementById('orders-list-section').style.display = 'block';
            };

            function renderSalesOrders(orders) {
                const tbody = document.querySelector('#sales-orders-table tbody');
                
                if (!orders || orders.length === 0) {
                    tbody.innerHTML = `
                        <tr>
                            <td colspan="9" class="text-center text-muted py-4">No sales orders found for this customer.</td>
                        </tr>
                    `;
                    return;
                }

                tbody.innerHTML = orders.map(order => {
                    // Order Status: Draft=0, Confirmed=1, Completed=2, Cancelled=3
                    const statusBadge = order.status === 0 ? 'bg-secondary' : 
                                       order.status === 1 ? 'bg-info' : 
                                       order.status === 2 ? 'bg-success' : 'bg-danger';
                    const statusText = order.status === 0 ? 'Draft' : 
                                      order.status === 1 ? 'Confirmed' : 
                                      order.status === 2 ? 'Completed' : 'Cancelled';
                    
                    // Payment Status: Pending=0, Paid=1
                    const paymentBadge = order.paymentStatus === 0 ? 'bg-warning text-dark' : 'bg-success';
                    const paymentText = order.paymentStatus === 0 ? 'Pending' : 'Paid';
                    
                    const products = order.lines.map(l => `${l.productName} (${l.quantity})`).join(', ');
                    
                    return `
                        <tr>
                            <td><code class="text-primary">${escapeHtml(order.orderNumber)}</code></td>
                            <td>${formatDate(order.orderDate)}</td>
                            <td><span class="badge ${statusBadge}">${statusText}</span></td>
                            <td><span class="badge ${paymentBadge}">${paymentText}</span></td>
                            <td class="text-end">${formatCurrency(order.subtotal)}</td>
                            <td class="text-end">${formatCurrency(order.vatAmount)}</td>
                            <td class="text-end fw-bold">${formatCurrency(order.totalAmount)}</td>
                            <td class="text-truncate" style="max-width: 300px;" title="${escapeHtml(products)}">${escapeHtml(products)}</td>
                            <td class="text-end">
                                <button class="btn btn-sm btn-outline-info" onclick="viewOrderDetails(${order.id})">View</button>
                                ${order.status === 2 ? `<button class="btn btn-sm btn-outline-warning" onclick="cancelOrder(${order.id})">Cancel</button>` : ''}
                            </td>
                        </tr>
                    `;
                }).join('');
            }

            // Cancel order
            window.cancelOrder = function(orderId) {
                document.getElementById('cancelOrderId').value = orderId;
                new bootstrap.Modal(document.getElementById('cancelOrderModal')).show();
            };

            document.getElementById('btn-confirm-cancel').addEventListener('click', async function() {
                const orderId = parseInt(document.getElementById('cancelOrderId').value);
                
                try {
                    const antiForgeryToken = document.querySelector('[name="__RequestVerificationToken"]').value;
                    const formData = new FormData();
                    formData.append('__RequestVerificationToken', antiForgeryToken);
                    formData.append('OrderId', orderId);
                    formData.append('Status', '3'); // Cancelled

                    const response = await fetch(`/SalesOrders/UpdateStatus?id=${orderId}`, {
                        method: 'POST',
                        body: formData
                    });

                    if (!response.ok) throw new Error('Failed to cancel order');

                    bootstrap.Modal.getInstance(document.getElementById('cancelOrderModal')).hide();
                    
                    // Refresh customer history
                    if (currentCustomerId) {
                        viewCustomerHistory(currentCustomerId);
                        // Also refresh details if open
                        if (document.getElementById('order-details-section').style.display === 'block') {
                            viewOrderDetails(orderId);
                        }
                    }
                } catch (error) {
                    console.error('Error cancelling order:', error);
                    alert('Failed to cancel order. Please try again.');
                }
            });

            // Close detail panel
            document.getElementById('btn-close-detail').addEventListener('click', function() {
                document.getElementById('detail-panel').classList.remove('active');
                document.getElementById('order-details-section').style.display = 'none';
                document.getElementById('orders-list-section').style.display = 'block';
                currentCustomerId = null;
            });

            // Helper functions
            function escapeHtml(text) {
                if (!text) return '';
                const div = document.createElement('div');
                div.textContent = text;
                return div.innerHTML;
            }

            function formatCurrency(amount) {
                return new Intl.NumberFormat('en-US', {
                    style: 'currency',
                    currency: 'USD',
                    minimumFractionDigits: 2
                }).format(amount);
            }

            function formatDate(dateString) {
                const date = new Date(dateString);
                return date.toLocaleDateString('en-US', {
                    year: 'numeric',
                    month: 'short',
                    day: 'numeric'
                });
            }

            // Initialize
            loadCustomers();
        })();
    </script>
}
