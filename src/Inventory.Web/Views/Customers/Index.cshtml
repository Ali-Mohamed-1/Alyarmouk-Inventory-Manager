@{
    ViewData["Title"] = "Customers";
}

<style>
    .customer-card {
        background: linear-gradient(135deg, #11998e 0%, #38ef7d 100%);
        color: white;
        border-radius: 12px;
        padding: 1.5rem;
        transition: transform 0.2s, box-shadow 0.2s;
        margin-bottom: 1.5rem;
    }
    .customer-card:hover {
        transform: translateY(-4px);
        box-shadow: 0 8px 16px rgba(0,0,0,0.25);
    }
    .customer-card .card-title {
        font-size: 1.5rem;
        font-weight: 700;
        margin-bottom: 0.75rem;
    }
    .customer-card .card-info {
        font-size: 0.95rem;
        opacity: 0.95;
        margin-bottom: 0.5rem;
    }
    .customer-card .card-actions {
        margin-top: 1rem;
        display: flex;
        gap: 0.5rem;
    }
    .btn-card-action {
        background: rgba(255,255,255,0.2);
        border: 1px solid rgba(255,255,255,0.3);
        color: white;
        padding: 0.4rem 1rem;
        border-radius: 6px;
        font-weight: 600;
        transition: all 0.2s;
    }
    .btn-card-action:hover {
        background: rgba(255,255,255,0.35);
        color: white;
        border-color: rgba(255,255,255,0.5);
    }
    .detail-panel {
        background: #f8f9fa;
        border-radius: 12px;
        padding: 2rem;
        margin-top: 2rem;
        display: none;
    }
    .detail-panel.active {
        display: block;
        animation: fadeIn 0.3s ease-in;
    }
    @@keyframes fadeIn {
        from { opacity: 0; transform: translateY(-10px); }
        to { opacity: 1; transform: translateY(0); }
    }
    .balance-summary {
        background: white;
        border-radius: 8px;
        padding: 1.5rem;
        margin-bottom: 1.5rem;
        box-shadow: 0 2px 8px rgba(0,0,0,0.08);
    }
    .balance-item {
        display: flex;
        justify-content: space-between;
        padding: 0.75rem 0;
        border-bottom: 1px solid #e9ecef;
    }
    .balance-item:last-child {
        border-bottom: none;
        font-weight: 700;
        font-size: 1.1rem;
        color: #28a745;
    }
    .orders-table {
        background: white;
        border-radius: 8px;
        padding: 1.5rem;
        box-shadow: 0 2px 8px rgba(0,0,0,0.08);
    }
    .table thead th {
        background-color: #f8f9fa;
        font-weight: 600;
        text-transform: uppercase;
        font-size: 0.85rem;
        letter-spacing: 0.5px;
        border-bottom: 2px solid #dee2e6;
    }
    .section-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 2rem;
    }
</style>

<div class="container-fluid px-4 py-3">
    <div class="section-header">
        <h1 class="h2 mb-0 fw-bold">Customers</h1>
        <button class="btn btn-success" onclick="createCustomer()">
            <i class="bi bi-plus-circle"></i> Add New Customer
        </button>
    </div>

    <!-- Customers Cards Grid -->
    <div id="customers-grid" class="row">
        <div class="col-12 text-center py-5">
            <div class="spinner-border text-success" role="status"></div>
            <p class="mt-3 text-muted">Loading customers...</p>
        </div>
    </div>

    <!-- Customer Detail Panel (hidden initially) -->
    <div id="detail-panel" class="detail-panel">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h3 class="fw-bold mb-0" id="detail-customer-name">Customer Details</h3>
            <button class="btn btn-outline-secondary" id="btn-close-detail">
                <i class="bi bi-x-circle"></i> Close
            </button>
        </div>

        <!-- Customer Info -->
        <div class="row mb-4">
            <div class="col-md-6">
                <div class="balance-summary">
                    <h5 class="fw-bold mb-3">Customer Information</h5>
                    <div id="customer-info"></div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="balance-summary">
                    <h5 class="fw-bold mb-3">Balance Summary</h5>
                    <div id="balance-info"></div>
                </div>
            </div>
        </div>

        <!-- Sales Orders List -->
        <div id="orders-list-section" class="orders-table">
            <h5 class="fw-bold mb-3">Sales Orders</h5>
            <div class="table-responsive">
                <table class="table table-hover align-middle" id="sales-orders-table">
                    <thead>
                        <tr>
                            <th>Order #</th>
                            <th>Date</th>
                            <th>Status</th>
                            <th>Payment Status</th>
                            <th class="text-end">Subtotal</th>
                            <th class="text-end">VAT</th>
                            <th class="text-end">Total</th>
                            <th>Products</th>
                            <th class="text-end">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td colspan="9" class="text-center text-muted py-4">
                                Loading orders...
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>

        <!-- Order Details Section (Hidden by default) -->
        <div id="order-details-section" style="display: none;">
            <div class="d-flex justify-content-between align-items-center mb-3">
                <h5 class="fw-bold mb-0">Order Details: <span id="detail-order-number" class="text-success"></span></h5>
                <button class="btn btn-sm btn-outline-secondary" onclick="closeOrderDetails()">
                    <i class="bi bi-arrow-left"></i> Back to Orders
                </button>
            </div>

            <div class="card mb-3 border-0 shadow-sm">
                <div class="card-body">
                    <div class="row mb-3">
                        <!-- Left Column: General Info, Documents, Financials -->
                        <div class="col-md-6">
                            <!-- General Info -->
                            <div class="mb-4">
                                <h6 class="text-muted text-uppercase small fw-bold">General Info</h6>
                                <div class="mb-1"><strong>Date:</strong> <span id="detail-order-date"></span></div>
                                <div class="mb-1"><strong>Status:</strong> <span id="detail-order-status"></span></div>
                            </div>

                            <!-- Documents -->
                            <div class="mb-4">
                                <h6 class="text-muted text-uppercase small fw-bold">Documents</h6>
                                <div id="pdf-section" class="mt-2">
                                    <!-- Content dynamically rendered via JS -->
                                </div>
                            </div>

                            <!-- Financials -->
                            <div>
                                <h6 class="text-muted text-uppercase small fw-bold">Financials</h6>
                                <div class="d-flex justify-content-between border-top pt-2" style="max-width: 400px;">
                                    <div>Subtotal:</div>
                                    <div id="detail-subtotal"></div>
                                </div>
                                <div class="d-flex justify-content-between" style="max-width: 400px;">
                                    <div>VAT (14%):</div>
                                    <div id="detail-vat"></div>
                                </div>
                                <div class="d-flex justify-content-between" style="max-width: 400px;">
                                    <div>Manufacturing Tax (1%):</div>
                                    <div id="detail-man-tax"></div>
                                </div>
                                <div class="d-flex justify-content-between fw-bold text-success fs-5 mt-1" style="max-width: 400px;">
                                    <div>Total:</div>
                                    <div id="detail-total"></div>
                                </div>
                            </div>
                        </div>

                        <!-- Right Column: Payment Terms, Check Details -->
                        <div class="col-md-6">
                            <div class="d-flex justify-content-between align-items-center">
                                <h6 class="text-muted text-uppercase small fw-bold mb-0">Payment Terms</h6>
                                <button class="btn btn-link btn-sm p-0 text-primary" onclick="openEditPaymentModal()" title="Edit Payment Info">
                                    <i class="bi bi-pencil"></i> Edit
                                </button>
                            </div>
                            <div class="mb-1 mt-2"><strong>Payment Status:</strong> <span id="detail-payment-status"></span></div>
                            <div class="mb-1"><strong>Payment Method:</strong> <span id="detail-payment-method"></span></div>
                            <div class="mb-1"><strong>Due Date:</strong> <span id="detail-due-date"></span></div>
                            
                            <!-- Check Details (Hidden by default) -->
                            <div id="check-details" class="mt-2 p-2 bg-light rounded border" style="display: none; font-size: 0.9em;">
                                <div class="mb-1 d-flex justify-content-between">
                                    <span>Check Received:</span>
                                    <span id="detail-check-received"></span>
                                </div>
                                <div class="mb-1 d-flex justify-content-between">
                                    <span>Received Date:</span>
                                    <span id="detail-check-received-date"></span>
                                </div>
                                <div class="border-top my-1"></div>
                                <div class="mb-1 d-flex justify-content-between">
                                    <span>Check Cashed:</span>
                                    <span id="detail-check-cashed"></span>
                                </div>
                                <div class="mb-1 d-flex justify-content-between">
                                    <span>Cashed Date:</span>
                                    <span id="detail-check-cashed-date"></span>
                                </div>
                            </div>

                            <!-- Bank Transfer Details -->
                            <div id="bank-transfer-details" class="mt-2 p-2 bg-light rounded border" style="display: none; font-size: 0.9em;">
                                <div class="mb-1 d-flex justify-content-between">
                                    <span>Transfer ID:</span>
                                    <span id="detail-transfer-id" class="fw-bold"></span>
                                </div>
                            </div>
                        </div>
                    </div>

                    <h6 class="text-muted text-uppercase small fw-bold mt-4 mb-2">Line Items</h6>
                    <div class="table-responsive">
                        <table class="table table-sm table-bordered">
                            <thead class="table-light">
                                <tr>
                                    <th>Product</th>
                                    <th class="text-center">Qty</th>
                                    <th class="text-center">Unit</th>
                                    <th class="text-end">Unit Price</th>
                                    <th class="text-center">Tax Inc.</th>
                                    <th class="text-end">VAT</th>
                                    <th class="text-end">Man. Tax</th>
                                    <th class="text-end">Subtotal</th>
                                    <th class="text-end">Total</th>
                                </tr>
                            </thead>
                            <tbody id="detail-lines-body"></tbody>
                        </table>
                    </div>

                    <div class="mt-3">
                        <h6 class="text-muted text-uppercase small fw-bold">Notes</h6>
                        <p id="detail-notes" class="text-muted fst-italic mb-0"></p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Edit Payment Modal -->
<div class="modal fade" id="editPaymentModal" tabindex="-1" aria-labelledby="editPaymentModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-primary text-white">
                <h5 class="modal-title fw-bold" id="editPaymentModalLabel">
                    <i class="bi bi-credit-card-2-front me-2"></i>Edit Payment Info
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <input type="hidden" id="editPaymentOrderId" />
                
                <div class="mb-3">
                    <label for="editPaymentMethod" class="form-label fw-bold">Payment Method</label>
                    <select class="form-select" id="editPaymentMethod" onchange="togglePaymentMethodFields()">
                        <option value="1">Cash</option>
                        <option value="2">Check</option>
                        <option value="3">Bank Transfer</option>
                    </select>
                </div>
                <div class="mb-3">
                    <label for="editPaymentStatus" class="form-label fw-bold">Payment Status</label>
                    <select class="form-select" id="editPaymentStatus">
                        <option value="0">Pending</option>
                        <option value="1">Paid</option>
                        <option value="2">Overdue</option>
                    </select>
                </div>
                
                <!-- Check Fields (Only if Check is selected) -->
                <div id="edit-check-fields" style="display: none;" class="border p-3 rounded bg-light mb-3">
                    <h6 class="text-muted text-uppercase small fw-bold mb-3">Check Details</h6>
                    
                    <div class="form-check form-switch mb-2">
                        <input class="form-check-input" type="checkbox" id="editCheckReceived">
                        <label class="form-check-label" for="editCheckReceived">Check Received</label>
                    </div>
                    <div class="mb-3">
                        <label for="editCheckReceivedDate" class="form-label small">Received Date</label>
                        <input type="date" class="form-control" id="editCheckReceivedDate">
                    </div>
                    
                    <div class="border-top my-2"></div>
                    
                    <div class="form-check form-switch mb-2">
                        <input class="form-check-input" type="checkbox" id="editCheckCashed">
                        <label class="form-check-label" for="editCheckCashed">Check Cashed</label>
                    </div>
                    <div class="mb-2">
                        <label for="editCheckCashedDate" class="form-label small">Cashed Date</label>
                        <input type="date" class="form-control" id="editCheckCashedDate">
                    </div>
                </div>

                <!-- Bank Transfer Fields -->
                <div id="edit-bank-transfer-fields" style="display: none;" class="border p-3 rounded bg-light mb-3">
                    <h6 class="text-muted text-uppercase small fw-bold mb-3">Transfer Details</h6>
                    <div class="mb-3">
                        <label for="editTransferId" class="form-label small">Transfer ID / Reference</label>
                        <input type="text" class="form-control" id="editTransferId" placeholder="e.g. TR-123456">
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-primary fw-bold" onclick="savePaymentInfo()">Save Changes</button>
            </div>
        </div>
    </div>
</div>

<!-- Create Customer Modal -->
<div class="modal fade" id="createCustomerModal" tabindex="-1" aria-labelledby="createCustomerModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-success text-white">
                <h5 class="modal-title fw-bold" id="createCustomerModalLabel">
                    <i class="bi bi-person-plus-fill me-2"></i>Add New Customer
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                @Html.AntiForgeryToken()
                <div class="mb-3">
                    <label for="createCustomerName" class="form-label fw-bold">Name</label>
                    <input type="text" class="form-control" id="createCustomerName" required />
                </div>
                <div class="mb-3">
                    <label for="createCustomerPhone" class="form-label fw-bold">Phone</label>
                    <input type="text" class="form-control" id="createCustomerPhone" />
                </div>
                <div class="mb-3">
                    <label for="createCustomerEmail" class="form-label fw-bold">Email</label>
