@model Inventory.Web.Models.BankSettingsViewModel
@{
    ViewData["Title"] = "History Archive";
}

<div class="container py-5">

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show border-3 border-black fw-bold mb-5" role="alert">
            <i class="bi bi-check-circle-fill me-2"></i> @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="row g-4 justify-content-center mb-5">
        <div class="col-md-6">
            <div class="neo-card p-5 h-100 text-center d-flex flex-column align-items-center justify-content-center hover-lift border-3">
                <div class="mb-4">
                    <i class="bi bi-cart-dash-fill display-1 text-primary"></i>
                </div>
                <h2 class="fw-black text-uppercase mb-3">Record Old<br/>Sales Order</h2>
                <a asp-controller="SalesOrders" asp-action="CreateHistorical" class="neo-btn neo-btn-primary w-100 py-3 fw-black fs-5">
                    START ENTRY <i class="bi bi-arrow-right-short"></i>
                </a>
            </div>
        </div>

        <div class="col-md-6">
            <div class="neo-card p-5 h-100 text-center d-flex flex-column align-items-center justify-content-center hover-lift border-3">
                <div class="mb-4">
                    <i class="bi bi-bag-plus-fill display-1 text-success"></i>
                </div>
                <h2 class="fw-black text-uppercase mb-3">Record Old<br/>Purchase Order</h2>
                <a asp-controller="PurchaseOrders" asp-action="CreateHistorical" class="neo-btn neo-btn-success w-100 py-3 fw-black fs-5">
                    START ENTRY <i class="bi bi-arrow-right-short"></i>
                </a>
            </div>
        </div>
    </div>

    <!-- Minimal Bank Balance Section -->
    <div class="row justify-content-center">
        <div class="col-md-10">
            <div class="neo-card border-3 p-4 bg-light overflow-hidden shadow-none">
                <div class="row align-items-center">
                    <div class="col-md-4">
                         <h5 class="fw-black text-uppercase mb-1"><i class="bi bi-bank me-2"></i>Starting Balance</h5>
                         <p class="small text-muted mb-0 fw-bold text-uppercase">Financial System Initialization</p>
                    </div>
                    <div class="col-md-8">
                        <form asp-action="UpdateBankBalance" method="post" class="neo-form d-flex align-items-center gap-3 justify-content-end">
                            <div style="width: 250px;">
                                <div class="input-group border-2 border-black">
                                    <span class="input-group-text bg-white border-0 fw-black">$</span>
                                    <input asp-for="BankBaseBalance" class="form-control border-0 fw-black text-end" placeholder="0.00" step="0.01" />
                                </div>
                            </div>
                            <button type="submit" class="neo-btn neo-btn-primary py-2 px-4 fw-black small">
                                UPDATE
                            </button>
                            @if (Model.LastUpdatedUtc.HasValue)
                            {
                                <div class="text-end border-start border-2 border-black ps-3 ms-2">
                                    <span class="d-block text-muted" style="font-size: 10px; font-weight: 800; line-height: 1;">LAST CALIBRATED</span>
                                    <span class="fw-black text-uppercase" style="font-size: 11px;">@Model.LastUpdatedUtc.Value.ToLocalTime().ToString("MMM dd, yyyy")</span>
                                </div>
                            }
                        </form>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>

<style>
    .hover-lift {
        transition: transform 0.2s ease, box-shadow 0.2s ease;
        cursor: pointer;
    }
    .hover-lift:hover {
        transform: translateY(-10px);
        box-shadow: 15px 15px 0 rgba(0,0,0,1) !important;
    }
</style>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
