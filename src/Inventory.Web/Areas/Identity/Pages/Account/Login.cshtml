@page
@model Inventory.Web.Areas.Identity.Pages.Account.LoginModel
@{
    ViewData["Title"] = "Login";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Alyarmouk Inventory</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    <link href="https://fonts.googleapis.com/css2?family=Plus+Jakarta+Sans:wght@300;400;500;600;700;800&display=swap" rel="stylesheet">
    <style>
        :root {
            --bg-gradient: linear-gradient(135deg, #0f172a 0%, #1e293b 100%);
            --accent-gradient: linear-gradient(90deg, #6366f1 0%, #a855f7 100%);
            --glass-white: rgba(255, 255, 255, 0.05);
            --glass-border: rgba(255, 255, 255, 0.1);
        }

        body {
            font-family: 'Plus Jakarta Sans', sans-serif;
            background: #0f172a;
            background-image: 
                radial-gradient(at 0% 0%, rgba(99, 102, 241, 0.2) 0px, transparent 50%),
                radial-gradient(at 100% 100%, rgba(168, 85, 247, 0.2) 0px, transparent 50%),
                radial-gradient(at 50% 50%, rgba(99, 102, 241, 0.1) 0px, transparent 50%);
            background-size: 200% 200%;
            animation: gradientBG 15s ease infinite;
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            margin: 0;
            color: #f8fafc;
        }

        @@keyframes gradientBG {
            0% { background-position: 0% 50%; }
            50% { background-position: 100% 50%; }
            100% { background-position: 0% 50%; }
        }

        .login-container {
            width: 100%;
            max-width: 460px;
            padding: 24px;
            animation: slideIn 0.6s cubic-bezier(0.16, 1, 0.3, 1);
        }

        @@keyframes slideIn {
            from { opacity: 0; transform: translateY(30px) scale(0.95); }
            to { opacity: 1; transform: translateY(0) scale(1); }
        }

        .glass-card {
            background: rgba(30, 41, 59, 0.7);
            backdrop-filter: blur(20px);
            -webkit-backdrop-filter: blur(20px);
            border: 1px solid var(--glass-border);
            border-radius: 32px;
            box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.5);
            overflow: hidden;
        }

        .card-login-header {
            padding: 60px 40px 40px;
            text-align: center;
            background: rgba(255, 255, 255, 0.02);
            border-bottom: 1px solid var(--glass-border);
        }

        .logo-icon {
            width: 80px;
            height: 80px;
            background: var(--accent-gradient);
            border-radius: 24px;
            display: flex;
            align-items: center;
            justify-content: center;
            margin: 0 auto 24px;
            font-size: 2.5rem;
            color: white;
            box-shadow: 0 10px 25px -5px rgba(99, 102, 241, 0.5);
            transform: rotate(-5deg);
        }

        .card-body {
            padding: 48px;
        }

        .form-label {
            font-weight: 600;
            font-size: 0.85rem;
            color: #94a3b8;
            margin-bottom: 8px;
            letter-spacing: 0.05em;
        }

        .input-group {
            background: rgba(15, 23, 42, 0.5);
            border: 1px solid var(--glass-border);
            border-radius: 16px;
            transition: all 0.2s ease;
            overflow: hidden;
        }

        .input-group:focus-within {
            border-color: #6366f1;
            box-shadow: 0 0 0 4px rgba(99, 102, 241, 0.15);
        }

        .input-group-text {
            background: transparent;
            border: none;
            color: #64748b;
            padding-left: 20px;
            font-size: 1.25rem;
        }

        .form-control {
            background: transparent;
            border: none;
            color: white;
            padding: 16px 20px 16px 10px;
            font-size: 1rem;
        }

        .form-control:focus {
            background: transparent;
            color: white;
            box-shadow: none;
        }

        .form-control::placeholder {
            color: #475569;
        }

        /* Fix browser autofill "white box" */
        input:-webkit-autofill,
        input:-webkit-autofill:hover, 
        input:-webkit-autofill:focus, 
        input:-webkit-autofill:active {
            -webkit-box-shadow: 0 0 0 100px #1e293b inset !important;
            -webkit-text-fill-color: #f8fafc !important;
            transition: background-color 5000s ease-in-out 0s;
            caret-color: white !important;
        }

        /* Improved input focus */
        .input-group:focus-within {
            border-color: #6366f1;
            box-shadow: 0 0 0 4px rgba(99, 102, 241, 0.25);
            transform: translateY(-1px);
        }

        .btn-login {
            background: var(--accent-gradient);
            border: none;
            border-radius: 16px;
            padding: 16px;
            font-weight: 700;
            font-size: 1rem;
            color: white;
            margin-top: 12px;
            transition: all 0.3s ease;
            box-shadow: 0 10px 20px -10px rgba(99, 102, 241, 0.5);
        }

        .btn-login:hover {
            transform: translateY(-2px);
            box-shadow: 0 15px 25px -5px rgba(168, 85, 247, 0.5);
            color: white;
        }

        .btn-login:active {
            transform: translateY(0);
        }

        .form-check-input {
            background-color: rgba(255,255,255,0.1);
            border-color: var(--glass-border);
            width: 1.2rem;
            height: 1.2rem;
            margin-top: 0.15rem;
        }

        .form-check-input:checked {
            background-color: #6366f1;
            border-color: #6366f1;
        }

        .form-check-label {
            color: #94a3b8;
            font-weight: 500;
            padding-left: 8px;
            user-select: none;
        }

        .login-footer {
            text-align: center;
            margin-top: 32px;
            color: #64748b;
        }

        .login-footer p {
            margin-bottom: 4px;
        }

        .validation-summary-errors {
            background: rgba(239, 68, 68, 0.1);
            border: 1px solid rgba(239, 68, 68, 0.2);
            border-radius: 16px;
            padding: 16px;
            margin-bottom: 32px;
            color: #fca5a5;
            font-size: 0.9rem;
        }

        .validation-summary-errors ul {
            margin: 0;
            padding-left: 20px;
        }
    </style>
</head>
<body>
    <div class="login-container">
        <div class="glass-card">
            <div class="card-login-header">
                <div class="logo-icon">
                    <i class="bi bi-box-seam-fill"></i>
                </div>
                <h2 class="fw-extrabold mb-1" style="letter-spacing: -0.02em;">Welcome Back</h2>
                <p class="text-muted small fw-medium text-uppercase ls-wide">Inventory Management Suite</p>
            </div>
            <div class="card-body">
                <form id="account" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

                    <div class="mb-4">
                        <label asp-for="Input.UserName" class="form-label text-uppercase">Username</label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="bi bi-person-fill"></i></span>
                            <input asp-for="Input.UserName" class="form-control" placeholder="username" autocomplete="username" />
                        </div>
                        <span asp-validation-for="Input.UserName" class="text-danger small mt-2 d-block"></span>
                    </div>

                    <div class="mb-4">
                        <label asp-for="Input.Password" class="form-label text-uppercase">Password</label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="bi bi-shield-lock-fill"></i></span>
                            <input asp-for="Input.Password" id="passwordField" type="password" class="form-control" placeholder="••••••••" autocomplete="current-password" />
                        </div>
                        <span asp-validation-for="Input.Password" class="text-danger small mt-2 d-block"></span>
                    </div>

                    <div class="mb-4">
                        <div class="form-check d-flex align-items-center mb-2">
                            <input class="form-check-input" id="showPassword" type="checkbox" />
                            <label class="form-check-label small" for="showPassword">Show Password</label>
                        </div>
                        <div class="form-check d-flex align-items-center">
                            <input class="form-check-input" asp-for="Input.RememberMe" />
                            <label class="form-check-label small" asp-for="Input.RememberMe">Keep me signed in</label>
                        </div>
                    </div>

                    <button id="login-submit" type="submit" class="w-100 btn btn-login text-white">
                        Secure Sign In <i class="bi bi-arrow-right-short ms-1 fs-5"></i>
                    </button>
                </form>
            </div>
        </div>
        <div class="login-footer">
            <p class="small fw-bold">Alyarmouk Trading Co.</p>
            <p class="small opacity-50">&copy; @DateTime.Now.Year All rights reserved.</p>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        document.getElementById('showPassword').addEventListener('change', function() {
            const passwordField = document.getElementById('passwordField');
            passwordField.type = this.checked ? 'text' : 'password';
        });
    </script>
</body>
</html>

